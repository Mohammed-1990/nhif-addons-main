<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="scrap_request_comp_rule" model="ir.rule">
        <field name="name">Scrap Request multi-company</field>
        <field name="model_id" ref="model_scrap_request"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>



	<record id="asset_request_comp_rule" model="ir.rule">
        <field name="name">Asset Scrap Request multi-company</field>
        <field name="model_id" ref="model_asset_request"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

    <record id="scrap_request_line_comp_rule" model="ir.rule">
        <field name="name">Scrap Request Line multi-company</field>
        <field name="model_id" ref="model_scrap_request_line"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>



</odoo>