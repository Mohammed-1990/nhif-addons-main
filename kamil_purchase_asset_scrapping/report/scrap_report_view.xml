<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record model="ir.ui.view" id="view_scrap_report_graph">
            <field name="name">scrap.report.graph</field>
            <field name="model">scrap.report</field>
            <field name="arch" type="xml">
                <graph string="Scrap Statistics">
                    <field name="scrap_id" type="row"/>
                </graph>
            </field>
        </record>

    	<record model="ir.ui.view" id="view_scrap_report_pivot">
            <field name="name">scrap.report.pivot</field>
            <field name="model">scrap.report</field>
            <field name="arch" type="xml">
                <pivot string="Scrap Order Statistics" disable_linking="True">
                	<field name="scrap_id" type="row"/>
                    <field name="asset_id" type="row"/>
                    <field name="partner_id" type="row"/> 
                    <field name="ordering_date" type="col"/>
                    <field name="estimated_value" type="measure"/>
                    <field name="sales_value" type="measure"/>

                </pivot>
            </field>
        </record>

    <record id="view_scrap_search" model="ir.ui.view">
        <field name="name">scrap.report.search</field>
        <field name="model">scrap.report</field>
        <field name="arch" type="xml">
            <search string="Scrap">
                <group expand="0" string="Group By">
                    <filter string="Scrap" name="scrap_id" context="{'group_by':'scrap_id'}"/>
                    <filter string="Asset" name="asset_id" context="{'group_by':'asset_id'}"/>
                    <filter string="Book" name="book_id" context="{'group_by':'book_id'}"/>
                    <filter string="Customer" name="partner_id" context="{'group_by':'partner_id'}"/>
                    <filter string="Status" name="state" context="{'group_by':'state'}"/>
                    <separator/>
                    <filter string="Order Date" name="date" context="{'group_by':'ordering_date'}"/>
                </group>
            </search>
        </field>
    </record>





    <record id="action_scrap_report" model="ir.actions.act_window">
        <field name="name">Asset Scrap Report</field>
        <field name="res_model">scrap.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot,graph</field>
        <field name="search_view_id" ref="view_scrap_search"/>
        <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'pivot', 'view_id': ref('view_scrap_report_pivot')}),
                          (0, 0, {'view_mode': 'graph', 'view_id': ref('view_scrap_report_graph')})]"/>
		<!-- <field name="view_id" ref="view_scrap_report_pivot"/> -->
        <field name="help">Purchase Analysis allows you to easily check and analyse your company purchase history and performance. From this menu you can track your negotiation performance, the delivery performance of your vendors, etc.</field>
	</record>


    <menuitem id="menu_scrap_report" action="action_scrap_report" sequence="6" parent="purchase.purchase_report"/>


</odoo>
