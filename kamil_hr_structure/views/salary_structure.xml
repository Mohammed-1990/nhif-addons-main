<odoo>
    <data>

    <!-- record job form view -->    
    <record  id="salary_structure_form_view" model="ir.ui.view" >
      <field name="name">salary.structure.form</field>
      <field name="model">salary.structure</field>
      <field name="arch" type="xml">
          <form>
            <header>
              <button type="object" name="update_all_contract" string="Update all contract" icon="fa-gears" colspan="2" class="oe_highlight"/>
            </header>
            <sheet>
              <div class="oe_button_box" name="button_box">
                  <button name="toggle_active" type="object"
                          class="oe_stat_button" icon="fa-archive">
                      <field name="is_active" string="Active" widget="boolean_button"
                              options='{"terminology": "archive"}'/>
                  </button><br/>
                  <br/><br/>
              </div>
              <h1>
                 <field name="name" placeholder="Description"/>
              </h1>
              <group>
                <group>
                  <field name="appoiontment_type_ids" options="{'no_create':True}" widget="many2many_tags" required="True"/>
                  <field name="is_old_structure"/>
                </group>
              </group>
              <notebook>
                <page string="Details">
                   <field name="line_ids"> 
                    <tree  editable="bottom">
                    <field name="degree_id" options="{'no_create':True}"/>
                     <field name="primary_category"/>
                      <field name="second_bonus"/>
                      <field name="third_bonus"/>
                      <field name="fourth_bonus"/>
                      <field name="fifth_bonus"/>
                      <field name="sixth_bonus"/>
                      <field name="seventh_bonus"/>
                      <field name="eighth_bonus"/>
                       <field name="ninth_bonus"/>
                      <field name="high_cost"/>
                      <field name="housing_allowance"/>
                      <field name="deportation_allowance"/>
                      <field name="minimum_bonus"/>
                      <field name="special_bonus"/>
                      <field name="representation_allowance"/>
                      <field name="ironically_removed"/>
                    </tree>
                  </field>
                </page>
              </notebook>
            </sheet>
          </form>
        </field>
      </record>

      <record  id="salary_structure_tree_view" model="ir.ui.view" >
      <field name="name">salary.structure.tree</field>
      <field name="model">salary.structure</field>
      <field name="arch" type="xml">
          <tree>
            <field name="name"/>
            <field name="is_active"/>
          </tree>
        </field>
      </record>


   <!-- Action salarystructure -->
   <record  id="action_salary_structure" model="ir.actions.act_window">
      <field name="name">Salary Structure</field>
      <field name="res_model">salary.structure</field>
      <field name="view_mode">tree,form</field>
    </record>

    
    <menuitem name="Salary Structure"
     id="record_salary_menu"
     parent="hr.menu_human_resources_configuration" 
     action="action_salary_structure" sequence="2"/>



  </data>
</odoo>