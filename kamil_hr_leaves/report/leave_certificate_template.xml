<odoo>

    <record id="paperformat_a4_for_leave" model="report.paperformat">
        <field name="name">A4 for hr leave</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">35</field>
        <field name="dpi">80</field>
    </record>
 
    <report id="leave_certificate_report"
            model="hr.leave"
            string="Leave Certificate"
            report_type="qweb-html"
            name="kamil_hr_leaves.leave_certificate_view"
            paperformat="paperformat_a4_for_leave"
            groups="kamil_hr_security.hr_head_of_hr_dept_group,kamil_hr_security.hr_general_department_group,kamil_hr_security.hr_employment_department_group"
        />

    <template id="leave_certificate_view">
        <t t-foreach="docs" t-as="doc">
            <t t-call="web.html_container">
              <t t-call="web.external_layout">
              
                    <page dir="rtl" style="page-break-inside: avoid;font-family:courier">
                      <br/><br/><br/>
                      <strong>
                        <div class="text-right" style="font:600;">
                            <p>التاريخ: <span t-esc="context_timestamp(datetime.datetime.today()).strftime('%Y-%m-%d')"/>  </p>
                        </div><br/><br/>
                        <div class="text-center" style="font:800;">
                            شهادة اجازة(<span t-esc="doc.holiday_status_id.name"/>)
                        </div><br/><br/><br/>
                        <div class="text-right" style="font:600;line-height:25pt;">     الاسم:  <span t-esc="doc.employee_id.name"/><br/>   المسمي الوظيفي:  <span t-esc="doc.employee_id.job_title_id.name"/><br/>     الدرجة الوظيفية:  <span t-esc="doc.employee_id.degree_id.name"/><br/>   ايام الاجازة:  <span t-esc="doc.number_of_days_display"/> <br/>     بداية الاجازة:  <span t-esc="doc.request_date_from"/>    نهاية الاجازة: <span t-esc="doc.request_date_to"/><br/>   التاريخ المتوقع لمباشرة العمل: <span t-esc="doc.date_direct_action"/><br/>  عنوان الموظف بالاجازة: <span t-esc="doc.address"/><br/><br/>    اجازة سعيدة نتمناها لكم.
 
                        </div><br/><br/>
                        <div class="text-right" style="font:600;line-height:25pt;">  مدير شؤون العاملين: ....................................... 
                           <br/><br/>   التوقيع: ...............................................
                            <br/><br/>  صورة الي:<br/>      - الادارة المعنية<br/>      - الموظف<br/>       - الأجور والمزايا<br/>      - الملف
                            <br/>
                        </div>
                      </strong>
                    </page>
                </t>
            </t>
        </t>
    </template>
</odoo>