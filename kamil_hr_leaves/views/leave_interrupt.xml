<odoo>
  <data>
    <!-- leave interrput form view -->    
    <record model="ir.ui.view" id="leave_interrput_form_view">
      <field name="name">leave interrupt</field>
      <field name="model">leave.interrupt</field>
      <field name="arch" type="xml">
          <form>
            <header>
              <button name="action_direct_manger" string="Confirm" type="object" class="oe_highlight" states="draft"/>

              <button name="action_dep_manger" string="Confirm" type="object" class="oe_highlight" states="direct_manger"/>

              <button name="action_g_manger" string="Confirm" type="object" class="oe_highlight" states="dep_manger"/>

              <button name="action_hr_manger" string="Confirm" type="object" class="oe_highlight" states="g_manger"/>

              <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" states="hr_manger"/>

               <field name="state" widget="statusbar"/>
            </header>

            <sheet>
            <group col="4">
              <field name="manager_id"/><newline/><newline/>
              <field name="employee_no"/>
              <field name="employee_id" options="{'no_create':True}"/>
            </group>
            <group col="4">
              <field name="leave_request_id" options="{'no_create':True}"/><newline/><newline/>
              <field name="date_start"/>
              <field name="date_end"/>
              <field name="date_interrupt"/>
              <field name="days"/>
              <field name="restored_days"/>
            </group>            
             
            </sheet>
          </form>
        </field>
      </record>


   <!--leave interrput tree view-->
      <record model="ir.ui.view" id="leave_interrput_tree_view">
      <field name="name">leave interrupt</field>
      <field name="model">leave.interrupt</field>
      <field name="arch" type="xml">
          <tree>
            
              <field name="employee_id"/>
              <field name="leave_request_id"/>
              <field name="date_interrupt"/>
              <field name="days"/>
              <field name="restored_days"/>
            
          </tree>
        </field>
      </record>



      <!-- Action leave interrput -->
   <record  id="action_leave_interrput" model="ir.actions.act_window">
      <field name="name">leave interrput</field>
      <field name="res_model">leave.interrupt</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      
    </record>
<!--menu leave interrput-->
<menuitem name="Leave Interrput" id="menu_leave_interrput" action="action_leave_interrput" parent="hr_holidays.menu_hr_holidays_root"/>

