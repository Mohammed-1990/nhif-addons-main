<odoo>
  <data>
    <record id="leaves_type" model="ir.ui.view">
      <field name="name">Leaves Types</field>
      <field name="model">hr.leave.type</field>
      <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
      <field name="arch" type="xml">
          <xpath expr="//field[@name='sequence']"  position="replace">
          </xpath>
          <xpath expr="//group[@name='validation']"  position="replace">
          </xpath>
          <xpath expr="//field[@name='time_type']"  position="replace">
             <field name="can_saved"/>
             <field name="duration" attrs="{'invisible':[('can_saved','=','no')],'required':[('can_saved','=','yes')]}"/>
             <field name="stop_incentive"/>
             <field name="can_acting"/>
             <field name="documents"/>
             <field name="document" attrs="{'invisible':[('documents','=',False)],'required':[('documents','=',True)]}" widget="many2many_tags"/>
          </xpath>
          <xpath expr="//field[@name='allocation_type']"  position="after">
            <field name="appoiontment_type" options="{'no_create':1, 'no_edit':1, 'no_open':1}" widget="many2many_tags" required="1"/>
            <field name="union_leave"/>
          </xpath>
          <xpath expr="//group[@name='validity']" position="replace">
            <group string="Marital and Religion">
              <field name="available_gender"/>
              <field name= "gender" attrs="{'invisible':[('available_gender','=','no')],'required':[('available_gender','=','yes')]}"/>

              <field name="available_marital"/>
              <field name= "marital" attrs="{'invisible':[('available_marital','=','no')],'required':[('available_marital','=','yes')]}"/>

              <field name="religion"/>
              <field name="religion_id" attrs="{'invisible':[('religion','=','no')],'required':[('religion','=','yes')]}" options="{'no_create':1, 'no_edit':1, 'no_open':1}" widget="many2many_tags"/>
            </group>
          </xpath>
          <xpath expr="//group[@name='calendar']" position="replace">
            <group name="calendar" string="Leave Cancel">
              <field name="can_cut"/>
              <field name="save_remaining" attrs="{'invisible':[('can_cut','=','no')],'required':[('can_cut','=','yes')]}"/>
            </group>
          </xpath>
          <xpath expr="//field[@name='request_unit']"  position="replace">
            <field name="request_duration" attrs="{'invisible':[('unpaid','=',False)],'required':[('unpaid','=',True)]}"/>
            <field name="annually" attrs="{'invisible':[('unpaid','=',True)]}"/>
            <field name="local" attrs="{'invisible':['|',('annually','=',True),('unpaid','=',True)]}"/>
            <field name="allocate_duration" attrs="{'invisible':[('local','=',False),('unpaid','=',False)],'required':['|',('local','=',True),('unpaid','=',True)]}"/>
          </xpath>
      </field>
    </record>

    <record id="hr_holiday_status_view_form_inherit_inh" model="ir.ui.view">
      <field name="name">Leaves Types</field>
      <field name="model">hr.leave.type</field>
      <field name="inherit_id" ref="project_timesheet_holidays.hr_holiday_status_view_form_inherit"/>
      <field name="arch" type="xml">
          <xpath expr="//field[@name='timesheet_generate']"  position="replace">
            <field name="timesheet_generate" invisible="True"/>
          </xpath>
      </field>
    </record>

    <record id="leaves_type_tree" model="ir.ui.view">
        <field name="name">Leaves Types Tree</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.view_holiday_status_normal_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='validity_start']" position="replace">
            </xpath>
            <xpath expr="//field[@name='validity_stop']" position="replace">
            </xpath>
            <xpath expr="//field[@name='double_validation']" position="replace">
            </xpath>
            <xpath expr="//field[@name='allocation_type']"  position="attributes">
              <attribute name="string">Balance Type</attribute>
            </xpath>
            <xpath expr="//field[@name='display_name']"  position="attributes">
              <attribute name="string">Leave Type</attribute>
            </xpath>
        </field>
      </record>

       <menuitem
        id="hr_holidays.hr_holidays_status_menu_configuration"
        action="hr_holidays.open_view_holiday_status"
        name="Leave Types"
        parent="hr_holidays.menu_hr_holidays_configuration"
        groups="kamil_hr_security.hr_employment_department_group"
        />

        <menuitem
        id="hr_holidays.menu_hr_holidays_approvals"
        name="Managers"
        parent="base.group_no_one"
        sequence="4"
        />
    <menuitem
        id="hr_holidays.hr_holidays_menu_manager_approve"
        name="To Approve"
        parent="base.group_no_one"
        sequence="1"/>
    <menuitem
        id="hr_holidays.hr_holidays_menu_manager_all"
        name="All"
        parent="base.group_no_one"
        sequence="2"/>
    <menuitem
        id="hr_holidays.hr_holidays_menu_manager_payroll"
        name="Payroll"
        parent="base.group_no_one"
        sequence="3"/>
     <menuitem
        id="hr_holidays.hr_leave_menu_my"
        parent="base.group_no_one"
        action="hr_holidays.hr_leave_action_my"
        sequence="4"/>
      

       <menuitem
        name="Leaves Analysis"
        id="hr_holidays.menu_hr_available_holidays_report_tree"
        action="hr_holidays.action_hr_available_holidays_report"
        parent="hr_holidays.menu_hr_holidays_report" 
        groups="kamil_hr_security.hr_employment_department_group,kamil_hr_security.hr_benefits_wages_section_group,kamil_hr_security.hr_career_path_section_group,kamil_hr_security.hr_training_department_group"/>


    <menuitem
        id="hr_holidays.menu_hr_holidays_report"
        name="Reporting"
        parent="hr_holidays.menu_hr_holidays_root"
        sequence="99"
        groups="kamil_hr_security.hr_employment_department_group,kamil_hr_security.hr_benefits_wages_section_group,kamil_hr_security.hr_career_path_section_group,kamil_hr_security.hr_training_department_group"/>

        <menuitem
            name="Report by Department"
            parent="hr_holidays.menu_hr_holidays_report"
            action="hr_holidays.action_hr_holidays_summary_dept"
            id="hr_holidays.menu_hr_holidays_summary_dept" 
            groups="kamil_hr_security.hr_employment_department_group,kamil_hr_security.hr_benefits_wages_section_group,kamil_hr_security.hr_career_path_section_group,kamil_hr_security.hr_training_department_group"/>


  </data>
</odoo>