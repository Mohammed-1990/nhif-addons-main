<odoo>
	<data>
		<record id="technical_performance_wizard_form" model="ir.ui.view">
            <field name='name'>Technical Performance Report</field>
            <field name='model'>technical.performance.wizard</field>
            <field name='arch' type='xml'>
                <form>
                    <sheet>
                    <group col="4">
                       <field name="date_from"/>
                       <field name="date_to"/>
                       <field name="branch_id" options="{'no_create':True,'no_edit':True,'no_open':True}"/>
                       <field name="employee_id" options="{'no_create':True,'no_edit':True,'no_open':True}"/>
                       <field name="unit_id" options="{'no_create':True,'no_edit':True,'no_open':True}"/>

                    </group>
                  <footer>
                      <button name='get_report' string='Print' type='object' class="oe_highlight"/>
                      <button string="Cancel" special="cancel"/>
                  </footer>
                    </sheet>
                </form>
            </field>
       </record>


    <record id="action_technical_performance_wizard" model="ir.actions.act_window">
        <field name="name">Technical Performance Report</field>
        <field name="res_model">technical.performance.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
   </record>



    <menuitem name="Technical Performance Report" 
      id="menu_technical_performance" 
      parent="performance_evaluation_reports_menu" 
      action="action_technical_performance_wizard"
      sequence="3"/>

	</data>
</odoo>