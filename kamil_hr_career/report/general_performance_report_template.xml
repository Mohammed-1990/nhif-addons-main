                        <tr>
                            <th class="text-center fit">المأموريات</th>
                            <td/>
                        </tr>
                        <tr> 
                            <th class="text-center fit">التدريب</th>
                            <td/>
                        </tr>
                        <tr>
                            <th class="text-center fit">المبادرات والإشادات</th>
                            <td/>
                        </tr>
                    </thead>
