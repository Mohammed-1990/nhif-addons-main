<odoo>

    <report id="distribution_activities_report"
            model="distribution.activities"
            string="Report by Distribution Activities"
            report_type="qweb-html"
            name="kamil_hr_career.distribution_activities_report_view"
            paperformat="kamil_hr_career.paperformat_career_landscape"
            menu="False"/>

    <template id="distribution_activities_report_view">
        <t t-if="docs==[]">
            <t t-call="web.html_container">
                 <t t-call="web.external_layout">
                    <br/><br/><p>تقرير توزيع الأنشطة</p>
                    
                    <div class="text-center" style="font-family:courier">
                    <p>لا توجد بيانات</p></div>
                </t>
            </t>
        </t>
        <t t-call="web.external_layout">
           <t t-foreach="docs" t-as="doc">
            <t t-call="web.html_container">
                <div class="page" style="page-break-inside: avoid;">
                    <strong>
                    <div class="text-center" style="font:500;">
                        <p>تقرير توزيع الأنشطة</p>
                          <p> من :<span t-esc="doc['date_from']"/> إلى:<span t-esc="doc['date_to']"/></p>
                          <br/><br/>
                         </div>

                        <div class="text-right" style="font:500;">
                            <p>اسم الموظف: <span t-esc="doc['employee']"/><br/>
                             القسم: <span t-esc="doc['department']"/><br/>
                             الوظيفة:  <span t-esc="doc['job']"/><br/>
                            </p>
                        </div>
                    </strong>
              
                    
                   <table style="margin:10px;width:100%;" dir="rtl" class="table-bordered">
                    <thead style="display: table-header-group;">
                      <tr class="table-active">
                        <th class="text-center fit">النشاط الرئيسي</th>
                        <th class="text-center fit">وصف النشاط</th>
                        <th class="text-center fit">الوزن</th>
                        <th class="text-center fit">من تاريخ</th>
                        <th class="text-center fit">إلى تاريخ</th>
                        <th class="text-center fit">التنفيذ الفعلي</th>
                        <th class="text-center fit">ملاحظات</th>
                      </tr>
                    </thead>
                    <tbody>
                            <t t-foreach="doc['activities']" t-as="activity">
                                <tr>
                                    <td class="text-center">
                                        <span t-esc="activity['main_activity']"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="activity['sub_activity']"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="activity['weight']"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="activity['date_from']"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="activity['date_to']"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="activity['execution_date']"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="activity['notes']"/>
                                    </td>
                                </tr>
                            </t>
                    </tbody>
                    <t t-if="docs==[]">
                            <tr class="text-center">
                                <td colspan="8">لا توجد بيانات</td>
                            </tr>
                        </t>
                    </table>
                </div>

                </t>
            </t>
        </t>
    </template>
</odoo>

