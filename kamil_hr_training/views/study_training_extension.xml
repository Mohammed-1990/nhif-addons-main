<odoo>
  <data>    

    <record model="ir.ui.view" id="training_expenses_form_view">
      <field name="name">training expenses</field>
      <field name="model">training.expenses</field>
      <field name="arch" type="xml">
          <form>
            <header>
                <button name="do_confirm" string="Confirm" type="object" class="btn btn-primary" states="draft" groups="kamil_hr_security.hr_training_department_group,kamil_hr_security.hr_development_and_training_group"/>
                <button name="do_accounting" string="Send to accounting" type="object" class="btn btn-primary" states="confirmed" groups="kamil_hr_security.hr_training_department_group,kamil_hr_security.hr_development_and_training_group"/>
                <field name="state" widget="statusbar"/>
            </header>
            <sheet>
                <h1>
                    <field name="name" placeholder="Description" attrs="{'readonly':[('state','!=','draft')]}"/>
                </h1>
                <separator string="Employee Data"/>
                <group col="4">
                  <field name="employee_no" force_save="1"/>
                  <field name="employee_id" options="{'no_create':True,'no_edit':True,'no_open':True}" readonly="True"/>
                  <field name="department_id" options="{'no_create':True,'no_edit':True,'no_open':True}" force_save="1"/>
                  <field name="job_id" options="{'no_create':True,'no_edit':True,'no_open':True}" force_save="1"/>
                </group> 
                <group col="4">
                     <field name="study_mission" options="{'no_create':True,'no_edit':True,'no_open':True}" force_save="1"/>
                     <field name="total_amount" />
                </group>
                <separator string="Program Details"/>
                <group col="4">
                  <field name="training_program" />
                  <field name="country" />
                  <field name="city_id" />
                  <field name="university_id" />
                  <field name="specialization" />
                </group> 
           <notebook>
              <page string="Support Data">
                <field name="line_ids" attrs="{'readonly':[('state','!=','draft')]}">
                 <tree editable="bottom">
                  <field name="support_type" options="{'no_create':True,'no_edit':True,'no_open':True}"/>
                  <field name="support_value"/>
                  <field name="document"/>
                  <field name="notes"/>
                  </tree>
                </field>
                </page> 
               </notebook>
            </sheet>
            <div class="oe_chatter">
                  <field name="message_follower_ids" widget="mail_followers"/>
                  <field name="activity_ids" widget="mail_activity"/>
                  <field name="message_ids" widget="mail_thread"/>
              </div> 


          </form>
        </field>
      </record>



    <record model="ir.ui.view" id="training_setting_form_view">
    <field name="name">Preparation of training allowance</field>
    <field name="model">training.setting</field>
    <field name="arch" type="xml">
          <form>

            <sheet>
                <h1>
                  <field name="name" placeholder="Preparation of training allowance"/>
                </h1>
                
              <notebook>
                  <page string="Internal Short Training">
                      <field name="internal_short_lines">
                        <tree editable="bottom">
                          <field name="amount" required="1"/>
                        </tree>
                      </field>
                 </page>

                  <page string="Internal Tall Training">
                      <field name="internal_tall_lines">
                        <tree editable="bottom">
                          <field name="status" required="1"/>
                          <field name="amount" required="1"/>
                        </tree>
                      </field>
                 </page>

                 <page string="External Short Training">
                      <field name="external_short_lines">
                        <tree editable="bottom">
                          <field name="country" required="1"/>
                          <field name="amount" required="1"/>
                          <field name="currency"/>
                        </tree>

                      </field>
                 </page>

                 <page string="External Tall Training">
                      <field name="external_tall_lines">
                        <tree editable="bottom">
                          <field name="country" required="1"/>
                          <field name="status" required="1"/>
                          <field name="amount" required="1"/>
                          <field name="currency" options="{'no_create':True,'no_edit':True,'no_open':True}"/>
                        </tree>
                      </field>
                 </page>



               </notebook>
            </sheet>
            

          </form>
        </field>
      </record>


    <record model="ir.ui.view" id="study_training_extension_form_view">
    <field name="name">study.training.extension</field>
    <field name="model">study.training.extension</field>
    <field name="arch" type="xml">
          <form>
            <header>
              <button name="do_submit" states="draft" string="Send" type="object" class="oe_highlight"/>
              <button name="dep_training" states="submitted" string="Approve" type="object" class="oe_highlight"/>
              <button name="dep_hr" states="dep_training" string="HR Department Confirm" type="object" class="oe_highlight"/>
              <button name="gm_confirm" states="dep_hr" string="General manager confirm" type="object" class="oe_highlight"/>
              <button name="do_return" states="submitted,dep_training,dep_hr" string="Return" type="object" />
              <button name="do_reject" states="dep_hr" string="Reject" type="object"/>
              <field name="state" widget="statusbar" />
            </header>
            <sheet>
                <group col="4">
                  <field name="employee_no"/>
                  <field name="employee_id" options="{'no_create':True}"/>
                  <field name="department_id" />
                  <field name="job_id"/>
                </group>
                <group col="4">
                  <field name="study_id" options="{'no_create':True}" force_save="1"/>
                  <field name="country"/>
                  <field name="from_date"/>
                  <field name="to_date" force_save="1"/>
                </group>

                <separator string="extension Training Data"/>
                  <group col="4">
                    <field name="to_date" string="From Date" force_save="1"/>
                    <field name="to_date_extension" attrs="{'readonly':[('state','!=','draft')]}"/>
                    <field name="reason_extension" attrs="{'readonly':[('state','!=','draft')]}"/>
                    <field name="document"/>
                  </group>
                <notebook>
                  <page string="Notes">
                    <div>
                      <field name="notes"/>
                    </div>
                  </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="activity_ids" widget="mail_activity"/>
                <field name="message_ids" widget="mail_thread"/>
            </div> 


          </form>
        </field>
      </record>


    <record model="ir.ui.view" id="study_training_interrupt_form_view">
    <field name="name">study.training.interrupt</field>
    <field name="model">study.training.interrupt</field>
    <field name="arch" type="xml">
          <form>
            <header>
              <button name="do_submit" string="Submit" type="object" class="btn btn-primary" states="draft"/>
              <button name="hr_development" string="Confirm" type="object" class="btn btn-primary" states="dep_training" groups="kamil_hr_security.hr_training_department_group"/>

              <button name="general_directorate" string="Submit" type="object" class="btn btn-primary" states="hr_development" groups="kamil_hr_security.hr_development_and_training_group"/>

              <button name="gm_confirm" string="Confirm" type="object" class="btn btn-primary" states="general_directorate" groups="kamil_hr_security.hr_head_of_hr_dept_group,kamil_hr_security.hr_management_group"/>

              <button name="do_reject" states="general_directorate" string="Reject" type="object" groups="kamil_hr_security.hr_head_of_hr_dept_group,kamil_hr_security.hr_management_group"/>
              <field name="state" widget="statusbar"/>
            </header>

            <sheet>
               <separator string="study Training Data"/>
                  <group col="4">
                    <field name="employee_no" attrs="{'readonly':[('state','!=','draft')]}"/>
                    <field name="employee_id" options="{'no_create':True,'no_edit':True,'no_open':True}" attrs="{'readonly':[('state','!=','draft')]}"/>
                    <field name="study_id" options="{'no_create':True,'no_edit':True,'no_open':True}" force_save="1"/>
                    <field name="country" force_save="1"/>
                    <field name="from_date" force_save="1"/>
                    <field name="to_date" force_save="1"/>                    
                  </group>
                  <group col="4">
                    <field name="type_interrupt" attrs="{'readonly':[('state','!=','draft')]}"/>
                    <field name="date" attrs="{'readonly':[('state','!=','draft')]}"/>
                    <field name="document" attrs="{'readonly':[('state','!=','draft')]}"/>
                  </group>
                  <group>
                    <field name="reason" attrs="{'readonly':[('state','!=','draft')]}"/>
                  </group>
                  <notebook>
                  <page string="Notes">
                    <div>
                      <field name="notes"/>
                    </div>
                  </page>
                </notebook>

            </sheet>
            <div class="oe_chatter">
                  <field name="message_follower_ids" widget="mail_followers"/>
                  <field name="activity_ids" widget="mail_activity"/>
                  <field name="message_ids" widget="mail_thread"/>
              </div> 


          </form>
        </field>
      </record>



    <record model="ir.ui.view" id="criteria_evaluation_form_view">
    <field name="name">criteria.evaluation</field>
    <field name="model">criteria.evaluation</field>
    <field name="arch" type="xml">
          <form>
           <sheet>
       
            <h1>
