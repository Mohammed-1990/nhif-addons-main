    <record model="ir.ui.view" id="coach_record_form_view">
    <field name="name">coach.record</field>
    <field name="model">coach.record</field>
    <field name="arch" type="xml">
          <form>
           
             <header>
                <button name="approved" string="Approved" type="object" class="btn btn-primary" states="draft"  groups="kamil_hr_security.hr_training_department_group,kamil_hr_security.hr_development_and_training_group"/>
                <button name="rejected" string="Rejected" type="object" class="btn btn-primary" states="approved"  groups="kamil_hr_security.hr_training_department_group,kamil_hr_security.hr_development_and_training_group"/>
                <field name="state" widget="statusbar" />
            </header>
            <sheet>
            <h1>
             <field name="name" placeholder="Coach Name"  attrs="{'readonly':[('state','=','rejected')]}"/>
           </h1>


         <group col="4" >
           <field name="emp_phone" attrs="{'readonly':[('state','=','rejected')]}"/>
           <field name="email" attrs="{'readonly':[('state','=','rejected')]}"/>
           <field name="birthday" attrs="{'readonly':[('state','=','rejected')]}"/>
           <field name="address" attrs="{'readonly':[('state','=','rejected')]}"/>
           <field name="document" attrs="{'readonly':[('state','=','rejected')]}"/>
           <field name="total_degree" attrs="{'readonly':[('state','=','rejected')]}"/>
         </group>

         <notebook>
          <page string="Evaluation">
                      <field name="evaluation_lines" attrs="{'readonly':[('state','=','rejected')]}">
                        <tree editable="bottom">
                          <field name="scop" options="{'no_create':True,'no_edit':True,'no_open':True}"/>
                          <field name="criteria" options="{'no_create':True,'no_edit':True,'no_open':True}"/>
                          <field name="percentage"/>
                          <field name="evaluation"/>
                        </tree>

                      </field>
                 </page>
                 <page string="Evaluation of implemented courses">
                      <field name="evaluation_lines2" attrs="{'readonly':[('state','=','rejected')]}">
                        <tree editable="bottom">
                          <field name="course_name" options="{'no_create':True, 'no_edit':True}"/>
                          <field name="rating_ratio"/>
                          <field name="notes"/>
                        </tree>

                      </field>
                 </page>
         </notebook>
            </sheet>
            <div class="oe_chatter">
                  <field name="message_follower_ids" widget="mail_followers"/>
                  <field name="activity_ids" widget="mail_activity"/>
                  <field name="message_ids" widget="mail_thread"/>
              </div> 


          </form>
      </field>
    </record>






    <record model="ir.ui.view" id="training_center_form_view">
    <field name="name">training.center</field>
    <field name="model">training.center</field>
    <field name="arch" type="xml">
          <form>
             <header>
                <button name="approved" string="Approved" type="object" class="btn btn-primary" states="draft"  groups="kamil_hr_security.hr_training_department_group,kamil_hr_security.hr_development_and_training_group"/>
                <button name="rejected" string="Rejected" type="object" class="btn btn-primary" states="approved"  groups="kamil_hr_security.hr_training_department_group,kamil_hr_security.hr_development_and_training_group"/>
                <field name="state" widget="statusbar"/>
            </header>
           <sheet>
       
            <h1>
             <field name="name" placeholder="Training Center" attrs="{'readonly':[('state','=','rejected')]}"/>
           </h1>

           <group col="4">
            <field name="country" attrs="{'readonly':[('state','=','rejected')]}"/>
            <field name="city" attrs="{'readonly':[('state','=','rejected')]}"/>
          </group>
          <group col="4">
            <field name="num_first" attrs="{'readonly':[('state','=','rejected')]}"/>
            <field name="num_second" attrs="{'readonly':[('state','=','rejected')]}"/>
            <field name="num_third" attrs="{'readonly':[('state','=','rejected')]}"/>
           </group>


         <group col="4">
           <field name="email" attrs="{'readonly':[('state','=','rejected')]}"/>
           <field name="address" attrs="{'readonly':[('state','=','rejected')]}"/>
           <field name="document" attrs="{'readonly':[('state','=','rejected')]}"/>
           <field name="total_degree" attrs="{'readonly':[('state','=','rejected')]}"/>
         </group>

         <notebook>
          <page string="Evaluation">
                      <field name="evaluation_lines" attrs="{'readonly':[('state','=','rejected')]}">
                        <tree editable="bottom" delete="false">
                          <field name="scop" options="{'no_create':True,'no_edit':True,'no_open':True}"/>
                          <field name="criteria" options="{'no_create':True,'no_edit':True,'no_open':True}"/>
                          <field name="percentage"/>
                          <field name="evaluation"/>
                        </tree>

                      </field>
                 </page>
              <page string="Evaluation of implemented courses">
                      <field name="evaluation_lines2" attrs="{'readonly':[('state','=','rejected')]}"> 
