<odoo>
    <record model="report.paperformat" id="paperformat_total_executed_internal_and_external_report">
        <field name="name">paperformat.total.executed.internal.and.external.report</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_width">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">30</field>
        <field name="margin_right">5</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>

    <report id="total_executed_internal_and_external_report"
            model="total.executed.internal.and.external.wizard"
            string="Total Executed Internal And External Report"
            report_type="qweb-html"
            name="kamil_hr_training.total_executed_report_view"
            paperformat="paperformat_total_executed_internal_and_external_report"
            menu="False"/>

    <template id="total_executed_report_view">
        <t t-call="web.html_container">
        <t t-call="web.external_layout">
            
             <div class="page" style="page-break-inside: avoid;"><br/><br/>
                <div class="text-center" style="font:500;">
                    <p>تقرير إجمالي المنفذ من التدريب الخارجي والداخلي</p>
                </div>
                <br/>
                <div class="text-right">التدريب الداخلي</div><br/>
                <table style="margin:10px;width:100%;" dir="rtl" class="table-bordered" >       
                 <thead class="table-active" style="display: table-header-group;">

                        <th class="text-center fit">النوع</th>
                        <th class="text-center fit">إجمالي الدورات</th>
                        <th class="text-center fit">إجمالي المشاركين</th>
                    </thead>
                    <tbody>
                        <t t-foreach="internal_program" t-as="doc">
                            <tr style="page-break-inside: avoid;">
                                <td class="text-center">
                                    <span t-esc="doc['type']"/>
                                </td>
                             
                                <td class="text-center">
                                    <span t-esc="doc['total_programs']"/>
                                </td>
                                <td class="text-center">
                                    <span t-esc="doc['total_participants']"/>
                                </td>    
                            </tr>
                        </t>
                        <t t-if="docs==[]">
                            <tr>
                                <td colspan="3" class="text-center">لا توجد بيانات</td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                <div class="text-right">التدريب الخارجي</div><br/>
                <table style="margin:10px;width:100%;" dir="rtl" class="table-bordered" >       
                 <thead class="table-active" style="display: table-header-group;">

                        <th class="text-center">النوع</th>
                        <th class="text-center">إجمالي الدورات</th>
                        <th class="text-center">إجمالي المشاركين</th>
                    </thead>
                    <tbody>
                        <t t-foreach="external_program" t-as="doc">
                            <tr>
                                <td class="text-center">
                                    <span t-esc="doc['type']"/>
                                </td>
                             
                                <td class="text-center">
                                    <span t-esc="doc['total_programs']"/>
                                </td>
                                <td class="text-center">
                                    <span t-esc="doc['total_participants']"/>
                                </td>    
                            </tr>
                        </t>
                        <t t-if="docs==[]">
                            <tr>
                                <td colspan="3" class="text-center">لا توجد بيانات</td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
        </t>
    </template>
</odoo>