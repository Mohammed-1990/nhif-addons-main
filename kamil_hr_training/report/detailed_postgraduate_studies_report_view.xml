<odoo>

    <report id="detailed_postgraduate_studies_report"
        model="detailed.postgraduate.studies.wizard"
        string="Detailed Postgraduate Studies report"
        report_type="qweb-html"
        name="kamil_hr_training.detailed_studies_report_view"
        paperformat="paperformat_training_landscape_report"
        menu="False"/>

 <template id="detailed_studies_report_view">
        <t t-call="web.html_container">
        <t t-call="web.external_layout">
            
            <div class="page" style="page-break-inside: avoid;"><br/><br/>
                <div class="text-center" style="font:500;">
                    <p>تقرير الدراسات العليا المفصل</p>
                </div>
                <br/>
                <table style="margin:10px;width:100%;" dir="rtl" class="table-bordered" >       
                 <thead class="table-active" style="display: table-header-group;">

                <tr>
                <th class="text-center fit" rowspan="2">البعثة</th>
                <th class="text-center fit" rowspan="2">من تاريخ</th>
                <th class="text-center fit" rowspan="2">إلى تاريخ</th>
                <th class="text-center fit" rowspan="2">التخصص</th>
                <th class="text-center fit" rowspan="2">الجامعة</th>
                <th class="text-center fit" rowspan="2">الدولة</th>

                <th class="text-center fit" colspan="4">بيانات المشاركين</th>
                <th class="text-center fit" colspan="2">مصروفات البعثة</th>
                </tr>
                <tr>
                    <th class="text-center fit">الموظف</th>
                    <th class="text-center fit">القسم</th>
                    <th class="text-center fit">الوظيفة</th>
                    <th class="text-center fit">الفرع</th>
                    <th class="text-center fit">نوع الدعم</th>
                    <th class="text-center fit">قيمة الدعم</th>
                </tr>
              </thead>

                <tbody>
                    <t t-foreach="docs" t-as="doc">
                        <tr style="page-break-inside: avoid;">
                            <td class="text-center" t-att-rowspan="doc['support_count']">
                                <span t-esc="doc['name']"/>
                            </td>

                            <td class="text-center" t-att-rowspan="doc['support_count']">
                                <span t-esc="doc['date_from']"/>
                            </td>

                            <td class="text-center" t-att-rowspan="doc['support_count']">
                                <span t-esc="doc['date_to']"/>
                            </td>
                            <td class="text-center" t-att-rowspan="doc['support_count']">
                                <span t-esc="doc['specialization']"/>
                            </td>
                            <td class="text-center" t-att-rowspan="doc['support_count']">
                                <span t-esc="doc['university_id']"/>
                            </td>
                            <td class="text-center" t-att-rowspan="doc['support_count']">
                                <span t-esc="doc['country']"/>
                            </td>
                            <td class="text-center" t-att-rowspan="doc['support_count']">
                                <span t-esc="doc['employee_id']"/>
                            </td>
                            <td class="text-center" t-att-rowspan="doc['support_count']">
                                <span t-esc="doc['department_id']"/>
                            </td>
                            <td class="text-center" t-att-rowspan="doc['support_count']">
                                <span t-esc="doc['functional_id']"/>
                            </td>    
                            <td class="text-center" t-att-rowspan="doc['support_count']">
                                <span t-esc="doc['branch']"/>
                            </td>
                            <td class="text-center">
                                <span t-esc="doc['support_type']"/>
                            </td>
                            <td class="text-center">
                                <span t-esc="doc['support_value']"/>
                            </td>

                            <t t-foreach="doc['support_amount_list']" t-as="amount">
                                <tr style="page-break-inside: avoid;">
                                    <td class="text-center">
                                        <span t-esc="amount['support_type']"/>
                                    </td>
                                     <td class="text-center">
                                        <span t-esc="amount['support_value']"/>
                                    </td>
                                </tr>
                            </t>
                        </tr>
                    </t>
                    
                    <t t-if="docs==[]">
                        <tr>
                            <td colspan="12" class="text-center">لا توجد بيانات</td>
                        </tr>
                    </t>
                </tbody>
                </table>
            
            </div>
            </t>
        </t>
    </template>
</odoo>