<odoo>
	<data>
		<record id="competencie_gap_wizard_form" model="ir.ui.view">
			<field name='name'>Competencie gap report</field>
			<field name='model'>competencie.gap.wizard</field>
			<field name='arch' type='xml'>
    			<form>
    			    <sheet>
            	        <group col="4">
                           <field name="date_from"/>
                           <field name="date_to"/>
                           <field name="competencie_id" options="{'no_create':True,'no_edit':True,'no_open':True}"/><newline/><newline/>
                           <field name="gap_from"/>
                           <field name="gap_to"/>
            	        </group>
                        <footer>
                            <button name='get_report' string='Print' type='object' class="oe_highlight"/>
                            <button string="Cancel" special="cancel"/>
                        </footer>
        			</sheet>
                </form>
    	    </field>
       </record>





    <record id="action_competencie_gap_wizard" model="ir.actions.act_window">
        <field name="name">Competencie gap report</field>
        <field name="res_model">competencie.gap.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
   </record>

    <menuitem name="Competencie gap report" 
              id="menu_competencie_gap" 
              parent="training_needs_menu" 
              action="action_competencie_gap_wizard"
              sequence="2"/>

	</data>
</odoo>