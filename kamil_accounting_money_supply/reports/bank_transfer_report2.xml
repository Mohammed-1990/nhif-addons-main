<?xml version="1.0" encoding="utf-8" ?>
<odoo>


	<report 
		id="bank_transfer_report2"
		model="money.movement"
		string="Transfer Request Letter"
		report_type="qweb-html"
		name="kamil_accounting_money_supply.report_bank_trnasfer_template2"
	/>

	<template id="report_bank_trnasfer_template2">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="o">
				<t t-call="web.external_layout">
					<div class="page">

						<div dir="rtl" style="float:right;text-align:start;">
							<a href="#" target="_blank">
								<svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-printer" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
									<path d="M11 2H5a1 1 0 0 0-1 1v2H3V3a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v2h-1V3a1 1 0 0 0-1-1zm3 4H2a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h1v1H2a2 2 0 0 1-2-2V7a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2h-1v-1h1a1 1 0 0 0 1-1V7a1 1 0 0 0-1-1z"/>
									<path fill-rule="evenodd" d="M11 9H5a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1zM5 8a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H5z"/>
									<path d="M3 7.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z"/>
								</svg>
							</a>
						</div>
							

						<p class="text-right">
							<strong style="float:right"> التاريخ <t t-esc="o.date"/> </strong>
						</p>
						<br/><br/>


						<p class="text-right">
							<strong style="float:right"> السيد/ مدير <t t-esc="o.from_journal_id.full_name or o.from_journal_id.name"/> </strong>
						</p>





						<br/>
						<p class="text-center">
							السلام عليكم ورحمة الله 
						</p>

						<p class="text-center">
							<strong class="text-center">
								<u>
									الموضوع/تحويل من حساب لحساب
								</u>
							</strong>
						</p>

						<strong dir="rtl" style="float:right">
							باﻹشارة للموضوع اعلاه الرجاء التكرم بتحويل مبلغ 
							( <t t-esc="'{0:,.2f}'.format(float(o.amount))"/> ) 
							جنيه 
							
							( <t t-esc="o.amount_in_words"/> ) 

							من حسابنا طرفكم بالرقم 
							( <t t-esc="o.from_journal_id.account_number"/> ) 
							الى حساب 
							<t t-esc="o.to_journal_id.full_name or o.to_journal_id.name"/> بالرقم ( <t t-esc="o.to_journal_id.account_number"/> )
							<br/>
							<span style="float:right">
								عبارة عن <t t-esc="o.name"/>
							</span>
						
						</strong>

						<br/>
						<br/>
						<br/>




						

			
						<p class="text-center">
							وجزاكم الله خيراً
						</p>

						<br/>
						<br/>
						<br/>
						<br/>
						<p class="float-left">
							مدير الشئون المالية			
						</p>


						<br/><br/><br/>


						<table border="0" class="text-right table borderless">
							<tr>

								<td>
									<strong style="float:right"> توقيع ثاني </strong>
									<span style="float:right;margin-right:20px">
										................................................................................
									</span>
								</td>

								<td>
									<strong style="float:right"> توقيع اول </strong>
									<span style="float:right;margin-right:20px">
										................................................................................
									</span>
								</td>
								
							</tr>
						</table>
						
					</div>
				</t>
			</t>
		</t>
	</template>


</odoo>


