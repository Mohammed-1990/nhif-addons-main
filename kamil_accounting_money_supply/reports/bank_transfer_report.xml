<?xml version="1.0" encoding="utf-8" ?>
<odoo>


	<report 
		id="bank_transfer_report"
		model="money.movement"
		string="Transfer Request Letter"
		report_type="qweb-html"
		name="kamil_accounting_money_supply.report_bank_trnasfer_template"
	/>

	<template id="report_bank_trnasfer_template">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="o">
				<t t-call="web.external_layout">
					<div class="page">


						<p class="text-right">
							<strong style="float:right"> التاريخ <t t-esc="o.date"/> </strong>
						</p>
						<br/><br/>

						<p class="text-right">
							<strong style="float:right"> السيد/ مدير <t t-esc="o.from_journal_id.full_name or o.from_journal_id.name"/> </strong>
						</p>



						<br/>
						<p class="text-center">
							السلام عليكم ورحمة الله 
						</p>

						<br/>
						<br/>
						<p class="text-center">
							<strong class="text-center">
								<u>
									الموضوع/تحويل من حساب لحساب
								</u>
							</strong>
						</p>


						<strong style="float:right">


						
<!-- 						
						باﻹشارة للموضوع اعلاه الرجاء تحويل مبلغ ( <t t-esc="'{0:,.2f}'.format(float(o.amount))"/> ) جنيه ( <t t-esc="o.amount_in_words"/> ) من حسابنا طرفكم بالرقم ( <t t-esc="o.from_journal_id.bank_account_id.acc_number" /> ) الى حسابنا طرفكم بالرقم ( <t t-esc="o.to_journal_id.bank_account_id.acc_number"/> )
						</strong>
						<br/>
						<br/>
						<br/>


 -->
						باﻹشارة للموضوع اعلاه الرجاء تحويل مبلغ ( <t t-esc="'{0:,.2f}'.format(float(o.amount))"/> ) جنيه ( <t t-esc="o.amount_in_words"/> ) من حسابنا طرفكم بالرقم ( <t t-esc="o.from_journal_id.account_number"/> ) الى حساب <t t-esc="o.to_journal_id.full_name or o.to_journal_id.name"/> بالرقم ( <t t-esc="o.to_journal_id.account_number"/> )
						</strong>
						<br/>
						<br/>
						<br/>




						

			
						<p class="text-center">
							وجزاكم الله خيراً
						</p>

						<br/>
						<br/>
						<br/>
						<br/>
						<p class="float-left">
							مدير الشئون المالية			
						</p>
						
					</div>
				</t>
			</t>
		</t>
	</template>


</odoo>


