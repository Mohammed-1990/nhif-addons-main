<odoo>
	<data>
			
		<record id="money_movement_tree_view" model="ir.ui.view">
			<field name="name">Money Movement Tree</field>
			<field name="model">money.movement</field>
			<field name="arch" type="xml">
				<tree>
					<field name="transfer_no"/>
					<field name="name"/>
					<field name="date"/>
					<field name="from_journal_id"/>
					<field name="to_journal_id"/>
					<field name="amount" sum="Amount"/>
					<field name="state"/>
				</tree>
			</field>
		</record>


		<record id="money_movement_form_view" model="ir.ui.view">
			<field name="name">Money Movement Form</field>
			<field name="model">money.movement</field>
			<field name="arch" type="xml">
				<form>
					<header>
						<button name="do_confirm" string="Confirm" type="object" states="draft" class="oe_highlight"/>

						<button name="do_reset_to_draft" string="Set To Draft" type="object" states="canceled"/>
						
						<button name="do_cancel" string="Cancel" type="object" states="confirmed"/>

						<field name="state" widget="statusbar"/>
					</header>
						<sheet>
								
			                <div class="oe_button_box" name="button_box">
			                	<button class="oe_stat_button" type="object" name="show_moves" icon="fa-bars" attrs="{'invisible':[('move_id','=',False)]}">
			                    	Journal Enteries
			                    	<field name="move_id" invisible="1"/>
			                    </button>		                
			                </div>

							<div class="float-right">
								<h2>
									<label for="transfer_no" class="oe_edit_only"/><br/>
									<field name="transfer_no" readonly="1"/>
								</h2>
							</div>

							<br/><br/>

							<div class="float-right">
								<h1>
									<label for="name" class="float-right"/><br/>
									<field name="name"  class="float-right" required="1" attrs="{'readonly':[('state','not in',['draft'])]}"/>
								</h1>
							</div>
							<br/>

							<group>
								<field name="date" required="1" attrs="{'readonly':[('state','not in',['draft'])]}"/>
							</group>

							<group col="4">
								<field name="from_journal_id" options="{'no_create':True}" required="1" attrs="{'readonly':[('state','not in',['draft'])]}"/>
								
								<field name="from_journal_balance"/>

								<field name="to_journal_id" options="{'no_create':True}" required="1" attrs="{'readonly':['|',('state','not in',['draft']),('from_journal_id','=',False)]}"/>
								
								<field name="to_journal_balance"/>

								<field name="amount" required="1" attrs="{'readonly':[('state','not in',['draft'])]}"/>
								<field name="amount_in_words"/>
									
							</group>
						</sheet>

						<div class="oe_chatter">
							<field name="message_follower_ids" widget="mail_followers"/>
							<field name="activity_ids" widget="mail_activity"/>
							<field name="message_ids" widget="mail_thread"/>
						</div>

				</form>
			</field>
		</record>

		<record id="action_money_movement" model="ir.actions.act_window">
			<field name="name">Money Movement</field>
			<field name="res_model">money.movement</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="money_movement_menu" name="Money Movement" parent="kamil_accounting_base.accounting_operations_menu" action="action_money_movement" sequence="3"/>

	</data>
</odoo>


