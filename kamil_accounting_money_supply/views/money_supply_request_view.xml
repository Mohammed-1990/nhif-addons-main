<odoo>
	<data>
			
		<record id="money_supply_request_tree_view" model="ir.ui.view">
			<field name="name">Money Supply Request Tree</field>
			<field name="model">money.supply.request</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="cash_journal_id"/>
					<field name="bank_journal_id"/>
					<field name="amount"/>
					<field name="date"/>
					<field name="state"/>
				</tree>
			</field>
		</record>


		<record id="money_supply_request_form_view" model="ir.ui.view">
			<field name="name">Money Supply Request Form</field>
			<field name="model">money.supply.request</field>
			<field name="arch" type="xml">
				<form>
					<header>
						
						<button name="do_admin_approve" string="Admin Approve" type="object" states="draft" class="oe_highlight"/>

						<button name="do_finance_approve" string="Finance Approve" type="object" states="admin_approved" class="oe_highlight"/>
						
						<button name="do_transfer_to_ratifications" string="Transfer To Ratifications" type="object" states="finance_approved" class="oe_highlight"/>

						<button name="do_cancel" string="Cancel" type="object" states="finance_approved,ratifications_department,admin_approved" class="oe_highlight"/>


						<button name="do_reset_to_draft" string="Reset to Draft" type="object" states="canceled" class="oe_highlight"/>

						<field name="state"  widget="statusbar"/>
					</header>
					<sheet>

		                <div class="oe_button_box" name="button_box">
		                	<button class="oe_stat_button" type="object" name="show_ratification" icon="fa-bars" attrs="{'invisible':[('state','!=','ratifications_department')]}">
		                    	Show Ratifications
		                    </button>		                
		                </div>
		                <br/>

						<div dir="rtl" style="float:right;text-align:start;">
							<h2>
								<label for="name" class="oe_edit_only"/><br/>
								<field name="name" attrs="{'readonly':[('state','!=','draft')]}" required="1"/>
							</h2>
						</div>

						<group col="4">
							<field name="bank_journal_id"  attrs="{'readonly':[('state','!=','draft')]}" required="1" options="{'no_create':True}"/>
							<field name="cash_journal_id" attrs="{'readonly':[('state','!=','draft')]}" required="1" options="{'no_create':True}"/>
							<field name="amount" attrs="{'readonly':[('state','!=','draft')]}" required="1"/>
							<field name="date" attrs="{'readonly':[('state','!=','draft')]}" required="1"/>
						</group>
						<group>
							<field name="amount_in_words"/>
						</group>

					</sheet>

					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
						<field name="activity_ids" widget="mail_activity"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>

				</form>
			</field>
		</record>


		<record id="action_money_supply_request" model="ir.actions.act_window">
			<field name="name">Money Supply Request</field>
			<field name="res_model">money.supply.request</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="money_supply_request_menu" name="Money Supply Request" parent="kamil_accounting_base.accounting_operations_menu" action="action_money_supply_request" sequence="10"/>




	</data>
</odoo>


