<odoo>
	<data>
			
		<record id="claims_tree_view" model="ir.ui.view">
			<field name="name">Claims Tree</field>
			<field name="model">claims.claims</field>
			<field name="arch" type="xml">
				<tree>
					<field name="orgnization_id"/>
					<field name="year_id"/>
					<field name="month"/>
					<field name="value_claim_before_review"/>
					<field name="value_claim_after_review"/>
					<field name="branch"/>
					<field name="state"/>
				</tree>
			</field>
		</record>


		<record id="claims_form_view" model="ir.ui.view">
			<field name="name">Claims Form</field>
			<field name="model">claims.claims</field>
			<field name="arch" type="xml">
				<form>
					<header>
						<button name="do_confirm" string="Confirm" type="object"/>
						<field name="state" clickable="true" widget="statusbar" statusbar_visible="draft,confirmed"/>
					</header>
					<sheet>
						<group>
							<field name="orgnization_id" required="1"/>
						</group>
						<group col="4">
								<field name="year_id"/>
								<field name="month"/>
								<field name="value_claim_before_review"/>
								<field name="value_claim_after_review"/>
								<field name="branch"/>
						</group>
					<notebook>
					<page string="Items">
							<field name="line_ids">
							<tree editable="bottom">
							<field name="branch_id"/>
							<field name="amount"/>
							<field name="cost_center_id"/>
							</tree>
							</field>
					</page>
				</notebook>
					<notebook>
					<page string="Details">
							<field name="line_ids">
							<tree editable="bottom">
							<field name="analytic_account_id"/>
							<field name="amount"/>
							<field name="partner_id"/>
							</tree>
							</field>
					</page>
				</notebook>
			</sheet>
		</form>
	</field>
</record>


		<record id="action_claims" model="ir.actions.act_window">
			<field name="name"> Claims</field>
			<field name="res_model">claims.claims</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="claims_menu" name="Claims" parent="account_accountant.menu_accounting"/>
		<menuitem id="menu_claims" name="Claims" parent="claims_menu" sequence="2" action="action_claims"/>

	</data>
</odoo>
