<odoo>
	<data>
			
		<record id="claim_complex_tree_view" model="ir.ui.view">
			<field name="name">Claim Complex Tree</field>
			<field name="model">claim.complex</field>
			<field name="arch" type="xml">
				<tree>
					<field name="company_id"/>
					<field name="year"/>
					<field name="month"/>
					<field name="amount"/>
					<field name="state"/>
				</tree>
			</field>
		</record>


		<record id="claim_complex_form_view" model="ir.ui.view">
			<field name="name">Claim Complex Form</field>
			<field name="model">claim.complex</field>
			<field name="arch" type="xml">
				<form>
					<header>
						
						<button name="do_auditors_audit" string="Auditors Audit" type="object" states="draft" class="oe_highlight"/>	

						<button name="do_internal_audit" string="Internal Audit" type="object" states="Auditors Audited" class="oe_highlight"/>	

						<button name="do_return_to_auditors" string="Return to Auditors" type="object" states="Auditors Audited"/>	
<!-- 
						<button name="do_gm_approval" string="General Manager Approval" type="object" states="Internal Auditor Audited" class="oe_highlight"/>	
						 -->

						<button name="do_transfer_to_finance_admin" string="Transfer to Director of Financial and Administrative Affairs" type="object" states="Internal Auditor Audited" class="oe_highlight"/>	
						 
						<button name="do_return_to_internal_auditor" string="Return To Internal Auditors" type="object" states="Internal Auditor Audited"/>	


						<button name="do_transfer_to_finance" string="Transfer to Director of Financial Affairs" type="object" states="Transfered to Director of Financial and Administrative Affairs" class="oe_highlight"/>	

						<button name="do_return_to_general_manager" string="Return To to General Manager" type="object" states="Transfered to Director of Financial and Administrative Affairs"/>	



						<button name="do_transfer_to_ratifications" string="Transfer to Ratifications Department" type="object" states="Transfered to Director of Financial Affairs" class="oe_highlight"/>	

						<button name="do_return_to_finance_admin" string="Return to Director of Financial and Administrative Affairs" type="object" states="Transfered to Director of Financial Affairs"/>	
						
						<field name="state" widget="statusbar" statusbar_visible="draft,Auditors Audit,Internal Auditor Audit"/>

					</header>
					<sheet>
						
						<div class="oe_button_box" name="button_box">
							
							<button class="oe_stat_button text-left" type="object" name="show_ratification_list" icon="fa-pencil-square-o" attrs="{'invisible':[('state','!=', 'Transfered to Ratifications Department')]}">
							Ratification List
							</button>

							<button class="oe_stat_button text-left" type="object" name="show_move" icon="fa-bars" attrs="{'invisible':[('state','!=', 'Transfered to Ratifications Department')]}">
							Journal Items
							</button>

						</div>

						<div class="float-right">
							<h2>
								<label for="company_id" class="oe_edit_only"/><br/>
								<field name="company_id" readonly="1"/>
							</h2>
						</div>

						<group>
							<field name="date"  required="1"/>
						</group>
						<group col="4">
							<field name="year" required="1"/>
							<field name="month" required="1"/>
						</group>
						<group col="4">
							<field name="amount"/>
							<field name="amount_in_words"/>
						</group>

						<notebook>
							<page string="Details">
								<field name="line_ids" readonly="1" force_save="1">
									<tree editable="bottom">
										<field name="partner_id"/>
										<field name="company_id" invisible="1"/>
										<field name="subscriber_company_id"/>
										<field name="account_id"/>
										<field name="budget_item_id"/>
										<field name="amount" sum="Amount"/>
									</tree>
								</field>								
							</page>
							<page string="Claims">
								<field name="claim_ids">
									<tree>
										<field name="name"/>
										<field name="partner_id"/>
										<field name="year"/>
										<field name="month"/>
										<field name="branch_id"/>
										<field name="date"/>
										<field name="total_amount" sum="Total"/>

									</tree>
								</field>
							</page>
							<page string="Financial Info">
								<group col="4">
									<field name="payable_account_id" required="1" options="{'no_create':True}" />
									<field name="journal_id" required="1" options="{'no_create':True}" />
								</group>
							</page>
						</notebook>

					</sheet>
				</form>
			</field>
		</record>


		<record id="action_claim_complex" model="ir.actions.act_window">
			<field name="name">Claim Complex</field>
			<field name="res_model">claim.complex</field>
			<field name="view_mode">tree,form</field>
		</record>


		<menuitem id="claim_complex_menu" name="Claims Complex" parent="kamil_accounting_claims.claim_main_menu"  action="action_claim_complex" sequence="-100"/>




		<record id="ratification_list_form_view" model="ir.ui.view">
			<field name="name">Ratification List Form</field>
			<field name="model">ratification.list</field>
			<field name="inherit_id" ref="kamil_accounting_financial_ratification.ratification_list_form_view"/>
			<field name="arch" type="xml">
				<notebook position="before">
					<field name="complex_id" invisible="1"/>
				</notebook>
			</field>
		</record>


	</data>
</odoo>