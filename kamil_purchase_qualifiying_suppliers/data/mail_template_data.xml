<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data> 
        <record id="email_template_announcement" model="mail.template">
            <field name="name">Announcement</field>
            <field name="model_id" ref="purchase_requisition.model_purchase_requisition"/>
            <field name="subject">${object.company_id.name} Announcement (Ref ${object.name or 'n/a' })</field>
            <field name="email_from">${object.create_uid.email_formatted | safe}</field>
            <field name="body_html" >
                <![CDATA[
                    ${object.announcement}
                    <a href="mailto:${object.email_to}" style="text-decoration:none; color: black;">${object.email_to}</a>
                ]]>
            </field>

            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>


        <record id="email_template_qs_tender_book" model="mail.template">
                <field name="name">Tender Book: Send RFQ</field>
                <field name="model_id" ref="kamil_purchase_qualifiying_suppliers.model_tender_book"/>
                <field name="subject">${object.company_id.name} Book (Ref ${object.sequence or 'n/a' })</field>
                <field name="email_from">${object.create_uid.email_formatted | safe}</field>
                <field name="partner_to">${object.partner_id.id}</field>
                <field name="body_html" type="html">
    <div style="margin: 0px; padding: 0px;">
        <p style="margin: 0px; padding: 0px; font-size: 13px;">
            Dear ${object.partner_id.name}
            % if object.partner_id.parent_id:
                (${object.partner_id.parent_id.name})
            % endif
           
            <br/><br/>
             % set website_url = object.env['ir.config_parameter'].sudo().get_param('web.base.url')
        <center>
          <a href="${website_url}/tenderbook/${object.id}" style="background-color: #1abc9c; padding: 20px; text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;" class="o_default_snippet_text">Click the link:</a>
            <br/><br/>
            <span style="color:#888888">(or view attached PDF)</span>
        </center>
       
            Best regards,
        </p>
    </div></field>
                <field name="report_template" ref="kamil_purchase_qualifiying_suppliers.book_qs_report"/>
                <field name="report_name">Book_${(object.sequence or '').replace('/','_')}</field>
                <field name="lang">${object.partner_id.lang}</field>
                <field name="user_signature" eval="False"/>
                <field name="auto_delete" eval="True"/>
        </record>


    <record id="email_template_done_tender_book" model="mail.template">
                <field name="name">Tender Book: Send Book</field>
                <field name="model_id" ref="kamil_purchase_qualifiying_suppliers.model_tender_book"/>
                <field name="subject">${object.company_id.name} Done Book (Ref ${object.sequence or 'n/a' })</field>
                <field name="email_from">${object.create_uid.email_formatted | safe}</field>
                <field name="partner_to">${object.partner_id.id}</field>
                <field name="body_html" type="html">
    <div style="margin: 0px; padding: 0px;">
        <p style="margin: 0px; padding: 0px; font-size: 13px;">
            Dear ${object.partner_id.name}
            % if object.partner_id.parent_id:
                (${object.partner_id.parent_id.name})
            % endif
            <p>Tender Number is :${object.requisition_id.name}</p><br/>
            <p>Book Number is : ${object.sequence}</p>
            <br/><br/>
             % set website_url = object.env['ir.config_parameter'].sudo().get_param('web.base.url')
        <center>
          <a href="${website_url}/tenderbook/${object.id}" style="background-color: #1abc9c; padding: 20px; text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;" class="o_default_snippet_text">Click the link:</a>
            <br/><br/>
            <span style="color:#888888">(or view attached PDF)</span>
        </center>
       
            Best regards,
        </p>
    </div></field>
                <field name="report_template" ref="kamil_purchase_qualifiying_suppliers.book_done_report"/>
                <field name="report_name">Book_${(object.sequence or '').replace('/','_')}</field>
                <field name="lang">${object.partner_id.lang}</field>
                <field name="user_signature" eval="False"/>
                <field name="auto_delete" eval="True"/>
        </record>


	</data>
</odoo>