<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<template id="report_qualifying_suppliers_document">
		<t t-call="web.external_layout">
			<div class="page">
				<div class="oe_structure"/>
				<div>
					<h3 style="font-family:Calibri;" class="text-center">تأهيل موردين للعام  <span t-field="docs.year" />
					</h3>				
				</div>
				<br/><br/>
				<table class="text-right table table-condensed table-hover" border="1">
					<thead>
						<tr>
							<td><strong>الرقم</strong></td>
							<td><strong>إسم الشركة</strong></td>
							<td><strong>عنوان الشركة</strong></td>
							<td><strong>مجال التأهيل</strong></td>
							<td><strong>الهاتف</strong></td>
						</tr>
					</thead>
					<tbody>
						<t t-foreach="o.area_rehabilitation_line_ids" t-as="line">
							<t t-foreach="line.partner_ids" t-as="p">
								<tr>
									<td>
										<t t-esc="p_index + 1"/>
									</td>
									<td>
										<span t-field="p.name"/>
									</td>
									<td>
										<t t-set="country" t-value="p.country_id.name"/>
										>
										<t t-set="state" t-value="p.state_id.name"/>
										>
										<t t-set="city" t-value="p.city"/>
										>
										<t t-set="street" t-value="p.street"/>
										>
										<t t-set="street2" t-value="p.street2"/>
										>
									</td>	
									<td>
									<p>
										<t t-if="country">
											<span t-esc="country"/> -
										</t>
										<t t-if="state">
											<span t-esc="state"/> -
										</t>
										<t t-if="city">
											<span t-esc="city"/> -
										</t>
										<t t-if="street">
											<span t-esc="street"/> -
										</t>
										<t t-if="street2">
											<span t-esc="street2"/> 
										</t>
									</p>
									</td>
									<td><span t-field="line.area_rehabilitation_id.name"/></td>
									<td><span t-field="p.phone"/></td>
								</tr>	
							</t>	
						</t>
					</tbody>
				</table>
			</div>
		</t>
	</template>





	<template id="report_qualifying_suppliers">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="o">
				<t t-call="kamil_purchase_qualifiying_suppliers.report_qualifying_suppliers_document"/>
			</t>
		</t>
	</template>
</odoo>