<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="report_area_rehabiliation_document">
			<t t-call="web.external_layout">
	    		<!-- <t t-set="o" t-value="o.with_context({'lang':o.user_id.lang})"/> -->
				<div class="page">
					<div class="oe_structure"/>
					<div>
						<h3 style="font-family:Calibri;" class="text-center">
							<b>Suppliers Tender Registration and Qualification Committee for year  <t t-esc="o.requisition_id.year"/></b>
						</h3>				
						<h3 class="active text-center">Classification of suppliers</h3>
					</div>
					
					<h1 class="active text-center"><span t-field="o.area_id.name" /></h1>
					<table class="text-right table table-condensed table-hover">
						<thead>
							<tr>
								<td><strong>NO</strong></td>
								<td><strong>Company Name</strong></td>
								<td><strong>Company Address</strong></td>
								<td><strong>Representative Name</strong></td>
								<td><strong>Phone</strong></td>
							</tr>
						</thead>
						<tbody>
							<t t-foreach="o.partner_ids" t-as="p">
								<tr>
									<td>
										<!-- <t t-esc="p_index + 1"/> -->
									</td>
									<td>
										<span t-field="p.name"/>
									</td>
									<td>
										<t t-set="country" t-value="p.country_id.name"/>
										>
										<t t-set="state" t-value="p.state_id.name"/>
										>
										<t t-set="city" t-value="p.city"/>
										>
										<t t-set="street" t-value="p.street"/>
										>
										<t t-set="street2" t-value="p.street2"/>
										>
									</td>
									<td>
										<p>
											<t t-if="country">
												<span t-esc="country"/> -
											</t>
											<t t-if="state">
												<span t-esc="state"/> -
											</t>
											<t t-if="city">
												<span t-esc="city"/> -
											</t>
											<t t-if="street">
												<span t-esc="street"/> -
											</t>
											<t t-if="street2">
												<span t-esc="street2"/> 
											</t>
										</p>
									</td>
									<td><span t-field="p.phone"/></td>
									<td><span t-field="p.phone"/></td>
								</tr>	
							</t>
						</tbody>
					</table>
				</div>
			</t>
		</template>

		<template id="report_area_rehabiliation">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="kamil_purchase_qualifiying_suppliers.report_area_rehabiliation_document" />
					
				</t>
			</t>
		</template>
	</data>

</odoo>