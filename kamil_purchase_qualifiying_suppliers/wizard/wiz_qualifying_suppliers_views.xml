<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
	<!-- Form-->
	<record id="view_wiz_qualifying_suppliers_form" model="ir.ui.view">
		<field name="name">wiz.qualifying.suppliers.form</field>
		<field name="model">wiz.qualifying.suppliers</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<field name="area_id" options="{'no_create':'1'}"/>
					</group>
					<footer>
						<button name="action_print" type="object" string="Print" class="btn-primary"/>
						<button string="Cancel" class="btn-secondary" special="cancel"/>
					</footer>
				</sheet>
			</form>
		</field>
	</record>


	<!-- Action-->
	<act_window
		id="action_area_rehabiliation_report"
		name="Area of Rehabilitaion Report"
		res_model="wiz.qualifying.suppliers" src_model="purchase.requisition"
		view_mode="form"
		target="new"
		context="{'default_requisition_id':active_id}"
		/>

</odoo>