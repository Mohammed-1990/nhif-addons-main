<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Form Visit -->
	<record id="view_visit_template_form" model="ir.ui.view">
		<field name="name">visit.template.form</field>
		<field name="model">field.visit.template</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<field name="visit_line_ids">
						<tree editable="buttom" >
							<field name="criteria_id" required="1"/>
							<field name="required_score" required="1"/>
						</tree>
					</field>
					<footer>
						<button name="create_field_visit_report" type="object" string="Create Report of the field visit" class="btn-primary"/>
						<button string="Cancel" class="btn-seconday" special="cancel"/>
					</footer>
				</sheet>
			</form>
		</field>
	</record>

	<!-- Action Visit-->
	<act_window
		id="action_field_visit_template"
		name="Report of the field visit"
		res_model="field.visit.template" src_model="purchase.requisition"
		view_mode="form"
		target="new"
		context="{'default_requisition_id':active_id}"
	/>


</odoo>