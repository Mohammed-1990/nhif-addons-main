<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <!-- this cron to notify the hr dept that employee promotion will be after 1 months -->
	<record id="hr_promotion_cron" model="ir.cron">
        <field name="name">HR Employee Profile: Check employee's promotion date</field>
        <field name="active" eval="True"/>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="state">code</field>
        <field name="code">model.check_next_promotions()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall">1</field>
    </record>

    <record id="hr_termination_date_cron" model="ir.cron">
        <field name="name">HR Employee Profile: Check employee's termination date</field>
        <field name="active" eval="True"/>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="state">code</field>
        <field name="code">model.check_termination_date()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall">1</field>
    </record>

    <record id="hr_next_allowance_date_cron" model="ir.cron">
        <field name="name">HR Employee Profile: Check employee's next bonus date</field>
        <field name="active" eval="True"/>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="state">code</field>
        <field name="code">model.check_next_bonus_date()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall">1</field>
    </record>

</odoo>