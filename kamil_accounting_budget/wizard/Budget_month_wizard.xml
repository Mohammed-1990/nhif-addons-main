<?xml version="1.0" encoding="utf-8"?>
<odoo>
	

	<!-- Form Wiz Payment report -->
	<record id="view_budget_month_report_form" model="ir.ui.view">
		<field name="name">budget.month.form</field>
		<field name="model">budget.month.wizard</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group col="4">
						<field name="date_from"/>
						<field name="date_to"/>
						<field name="budget_ids"/>
					</group>
					<footer>
						<button name="print_report" type="object" string="print" class="btn-primary"/>
						<button string="Cancel" special="cancel" class="btn-secondary"/>
					</footer>
				</sheet>
			</form>
		</field>
	</record>



	<!-- Action Payment report-->
	<act_window
		id="action_budget_month_report"
		name="Budget Month Report"
		res_model="budget.month.wizard"
		view_mode="form"
		target="new"
	/>

	<menuitem id="menu_budget_report" name="Budget Per Month Report" parent="account.menu_finance_entries_management" action="action_budget_month_report" sequence="75"/>
</odoo>