			<field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
		</record>
	
		<record id="account_budget_operation_line_multi_company_rule" model="ir.rule">
			<field name="name">account.budget.operation.line multi-company</field>
			<field ref="model_account_budget_operation_line" name="model_id"/>
			<field eval="True" name="global"/>
			<field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
		</record>
	
	</data>
</odoo>
