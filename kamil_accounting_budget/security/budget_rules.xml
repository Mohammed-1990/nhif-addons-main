<odoo>
	<data>
	
		<record id="budget_account_value_multi_company_rule" model="ir.rule">
			<field name="name">budget.account.value multi-company</field>
			<field ref="model_budget_account_value" name="model_id"/>
			<field eval="True" name="global"/>
			<field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
		</record>
	
		<record id="account_budget_operation_multi_company_rule" model="ir.rule">
			<field name="name">account.budget.operation multi-company</field>
