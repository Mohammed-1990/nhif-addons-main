<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	
	<!-- Payment Report-->
	<report 
		id="budget_exchange_report"
		model="budget.exchange.wizard"
		string="Budget Exchange Report"
		report_type="qweb-pdf"
		name="kamil_accounting_budget.exchange_template"
	/>


	<!-- Payment Report Template-->
	<template id="exchange_template">
		<t t-call="web.external_layout">
			<t t-call="web.html_container">
					<div class="page">
						<div class="header">
							<h3 class="text-right">Payment</h3>				
						</div>
						<table class="table table-bordered">
							<thead>
								<tr>
									<th>No</th>
									<th>Budget Item</th>
									<th>Certified Value</th>
									<th>Drawn Value</th>
									<th>Remaining Value</th>
									<th>percentage</th>
								</tr>
							</thead>
							<tbody>
								<t t-foreach="docs" t-as="doc">
									<tr>
										<td>
											<t t-esc="doc_index + 1"/>
										</td>
										<td>
											<t t-esc="doc['analytic_account_id']"/>
										</td>
										<td>
											<t t-esc="doc['reserved_value']"/>
										</td>
										<td>
											<t t-esc="doc['practical_amount']"/>
										</td>
										<td>
											<t t-esc="doc['remaining_value']"/>
										</td>
										<td>
											<t t-esc="doc['percentage']"/>
										</td>
									</tr>
								</t>
							</tbody>
						</table>
					</div>
			</t>
		</t>
	</template>


</odoo>