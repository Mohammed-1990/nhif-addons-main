<odoo>
	<data>
		<record id="expenses_buget_items_wizard_form" model="ir.ui.view">
			<field name="name">expenses.budget.items.budget</field>
			<field name="model">expenses.items.budget.wizard</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group col="4"> 
							<field name="date_from" required="1"/>
							<field name="date_to" required="1"/>
						</group>
						<group>
							<field name="account_id" options="{'no_create':True}" required="1" string="Choose Account/Group"/>
							<field name="company_ids" widget="many2many_tags" options="{'no_create':True}" groups="kamil_accounting_financial_ratification.hq_group"/>
						</group>
						<footer>
						<button name='get_report' string='Print' type='object' class="oe_highlight"/>
							<button string="Cancel" special="cancel"/>
						</footer>
					</sheet>
				</form>
			</field>
	</record>

	<record id="action_expenses_budget_items_wizards" model="ir.actions.act_window">
		<field name="name">Expenses Budget Items Report</field>
		<field name="res_model">expenses.items.budget.wizard</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>



	<menuitem id="menu_budget_report_main" sequence="62" parent="account.menu_finance_entries_management" name="Budgets Reports"/>

	<menuitem id="menu_expenses_budget_items" sequence="1" parent="menu_budget_report_main" action="action_expenses_budget_items_wizards"/>


 

	</data>
</odoo>