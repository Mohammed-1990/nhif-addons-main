<?xml version="1.0" encoding="utf-8"?>
<odoo>

   <report 
   		id="book_report"
        model="purchase.order"
        string="Books Report"
        report_type="qweb-pdf"
        name="kamil_purchase_public_tender.book_report_view_documents"
        paperformat="kamil_purchase_qualifiying_suppliers.paperformat_book_report"
        menu="False"
        />

    <template id="book_report_view">
        <t t-call="web.html_container">
            <div class="header">
                <h3 style="font-family:Calibri;" class="text-center">كراسة العطاء</h3>
            </div><br/><br/><br/>
            <div class="article">
                <br/><br/><br/>
           
                <table class="table table-condensed table-bordered" style="width: 100%">
                     <tr>
                        <th><b>رقم العطاء</b></th>
                        <td><span t-esc="o.requisition_id.name"/></td>
                        <th><b>رقم الكراسة</b></th>
                        <td><span t-esc="o.name"/></td>
                    </tr>
                    <tr>
                        <td><b>إسم الشركة</b></td>
                        <td><span t-esc="o.partner_id.name"/></td>
                    </tr>
                    <tr>
                        <td><b>الايميل</b></td>
                        <td><span t-esc="o.partner_id.email"/></td>
                    </tr>
                    <tr>
                        <td><b>الهاتف</b></td>
                        <td><span t-esc="o.partner_id.phone"/></td>
                    </tr>
                </table>
                <br/><br/><br/><br/>
                <table class="text-right table table-condensed table-hover">
                    <tr>
                        <td>
                            <strong style="float:right"> التاريخ </strong>
                            <span style="float:right;margin-right:20px" t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/> 
                        </td>
                    </tr>
                </table>
            </div>
            <div class="footer">
                <div class="row text-center" style="border-top: 1px solid black;">
                    <div class="col col-3 offset-9 text-right">
                        <ul class="list-inline mt-2">
                            <li class="list-inline-item">الصفحة:</li>
                            <li class="list-inline-item">
                                <span class="page"/>
                            </li>
                            <li class="list-inline-item">/</li>
                            <li class="list-inline-item">
                                <span class="topage"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </t>
    </template>

     <template id="book_report_view_documents">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="kamil_purchase_public_tender.book_report_view"/>
            </t>
        </t>
    </template>
</odoo>