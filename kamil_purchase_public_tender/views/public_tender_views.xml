<?xml version="1.0" encoding="utf-8"?>
<odoo>



	<!-- Form Public Tender-->
	<record id="view_publice_tender_form" model="ir.ui.view">
		<field name="name">public.tender.form</field>
		<field name="model">purchase.requisition</field>
		<field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
		<field name="arch" type="xml">
			<field name="dept_id" position="after">
				<field 
					name="request_ids" 
					widget="many2many_tags"
					readonly="1"/>
			</field>
			
			<xpath expr="//button[@name='action_suppliers_valuation_confirm']" position="before">
				<button 
					name="%(kamil_purchase_public_tender.action_purchase_order_valuation)d"
					string="Suppliers Valuation"
					type="action" 
					attrs="{'invisible':['|',('state','!=','suppliers_valuation'),('type','=','qualifying_suppliers')]}" 
					class="btn-primary"
					/>

			</xpath>
			<xpath expr="//field[@name='line_ids']" position="before">
				<button
					name="%(kamil_purchase_public_tender.action_request_filter)d"
					type="action"
					string="Requests Collecting"
					icon="fa-plus"
					states="draft"
					class="btn-primary"
				/>
			</xpath>
		</field>
	</record>



	<!-- Action Public Tender-->
	<record id="action_public_tender" model="ir.actions.act_window">
		<field name="name">Public Tender</field>
		<field name="res_model">purchase.requisition</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,kanban,form</field>
		<field name="context">{'default_type':'public_tender',}
		</field>		
		<field name="domain">[('type','=','public_tender')]</field>
	</record>

	<record id="view_purchase_requisition_line_tree" model="ir.ui.view">
		<field name="name">purchase.requisition.line.tree</field>
		<field name="model">purchase.requisition.line</field>
		<field name="arch" type="xml">
			<tree>
				<field name="product_id"/>
				<!-- <field name="categ_id"/> -->
				<field name="product_qty"/>
				<field name="price_unit"/>
			</tree>
		</field>
	</record>



</odoo>