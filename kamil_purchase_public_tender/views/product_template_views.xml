<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_product_supplier_inherit2" model="ir.ui.view">
		<field name="name">product.template</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="purchase.view_product_supplier_inherit"/>
		<field name="arch" type="xml">
			<group name="purchase" position="before">
				<group string="Reordering Rule" name="adminstration" >
                    <field name="rule_admin_line_ids" context="{'default_product_tmpl_id': context.get('product_tmpl_id', active_id)}" nolabel="1">
                    	<tree>
                    		<field name="admin_id"/>
							<field name="dept_id"/>
							<field name="start_date"/>
							<field name="end_date"/>
                    	</tree>
                    </field>
                </group>
			</group>	
		</field>
	</record>

	<record id="view_admin_line_form" model="ir.ui.view">
		<field name="name">rule.administration.line.form</field>
		<field name="model">rule.administration.line</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group col="4">
						<field name="admin_id" domain="[('company_id','=',company_id)]"/>
						<field name="dept_id" domain="[('company_id','=',company_id)]"/>
						<field name="start_date"/>
						<field name="end_date"/>
						<field name="company_id" invisible="1"/>
					</group>
				</sheet>
			</form>
		</field>
	</record>

						


	<record id="view_admin_line_tree" model="ir.ui.view">
		<field name="name">rule.administration.line.tree</field>
		<field name="model">rule.administration.line</field>
		<field name="arch" type="xml">
			<tree>
				<field name="admin_id"/>
				<field name="dept_id"/>
				<field name="start_date"/>
				<field name="end_date"/>
			</tree>
		</field>
	</record>
 
</odoo>