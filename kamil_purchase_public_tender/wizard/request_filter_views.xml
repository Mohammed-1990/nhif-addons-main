<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
	<!-- Form Request Filter-->
	<record id="view_request_filter_form" model="ir.ui.view">
		<field name="name">request.filter.form</field>
		<field name="model">request.filter</field>
		<field name="arch" type="xml">
			<form >
				<sheet>
					<group>
						<field name="type" invisible="1"/>
					</group>
					<field name="request_ids" domain="[('type','=',type),('state','=','in_process')]">
						<tree>
							<field name="name" string="Name"/>
							<field name="admin_id"/>
							<field name="dept_id"/>
							<field name="company_id"/>
						</tree>
					</field>
					<footer>
						<button name="collecting" string="Collecting" type="object" class="btn-primary" />
						<button string="Cancel" class="btn-secondary" special="cancel"/>
					</footer>
				</sheet>	
			</form>
		</field>
	</record>


	<!-- Action Request Filter-->
	<act_window 
		id="action_request_filter"
		name="Request Filter"
		res_model="request.filter" 
		view_mode="form"
		target="new"
		
	/>


</odoo>



