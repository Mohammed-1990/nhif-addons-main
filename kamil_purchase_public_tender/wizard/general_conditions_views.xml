<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
	<!-- Form General Conditions-->
	<record id="view_wiz_order_general_conditions_form" model="ir.ui.view">
		<field name="name">wiz.order.general.conditions.form</field>
		<field name="model">wiz.order.general.conditions</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<label for="select_all" string="Select All"/>
					<field name="select_all"/>
					<field name="condtions_ids">
						<tree editable="buttom" create="0" delete="0" >
							<field name="name" readonly="1"/>
							<field name="exist"/>
							<field name="attachments"/>
						</tree>
					</field>
					<footer>
						<button name="action_confirm" type="object" string="Confirm" class="btn-primary"/>
						<button string="Cancel" class="btn-secondary" special="cancel"/>
					</footer>
				</sheet>
			</form>
		</field>
	</record>

	<!-- Action General Conditions -->
	<act_window
		id="action_wiz_general_conditions"
		name="Check General Conditions"
		res_model="wiz.order.general.conditions" src_model="purchase.order"
		view_mode="form"
		target="new"
		context="{'default_order_id':active_id}"
	/>


</odoo>