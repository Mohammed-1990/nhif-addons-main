<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	
	<!-- Account Move Report-->
	<report 
		id="account_move_report"
		model="wiz.account.move"
		string="Account Move Report"
		report_type="qweb-html"
		name="kamil_accounting_reports.account_move_template"
	/>


	<!-- Account Move  Template-->
	<template id="account_move_template">
			<t t-call="web.html_container">
				<div class="page">
					<div class="text-center">
					<img t-if="company_id_logo" t-att-src="image_data_uri(company_id_logo)" class="img-fluid oe_slides_channel_thumbnail" alt="Logo"/>
				</div>
				<br/><br/>
					<div dir="rtl" style="float:right;text-align:start;">
						<a href="#" target="_blank">
							<svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-printer" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
								<path d="M11 2H5a1 1 0 0 0-1 1v2H3V3a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v2h-1V3a1 1 0 0 0-1-1zm3 4H2a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h1v1H2a2 2 0 0 1-2-2V7a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2h-1v-1h1a1 1 0 0 0 1-1V7a1 1 0 0 0-1-1z"/>
								<path fill-rule="evenodd" d="M11 9H5a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1zM5 8a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H5z"/>
								<path d="M3 7.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z"/>
							</svg>
						</a>
					</div>
					<br/><br/>
						
					<div class="text-center">
						<strong class="text-center">
							<b>تقرير قائمة قيود التسوية</b>
							<br/>
							<b>
								<t t-if="date_from" >
									للفترة من
									<t t-esc="date_from"/>
								</t>

								<t t-if="date_to" >
									الى
									<t t-esc="date_to"/>
								</t>
							</b>
						<br/><br/>
						</strong>
					</div>
					<table dir="rtl" border="1" class="text-center table table-condensed table-hover">

                    	<thead>
                        	<tr>
                        		<th>الرقم</th>
                        		<th>التاريخ</th>
                        		<th>رقم القيد</th>
                        		<th>المبلغ</th>
                        		<th>البيان</th>
                        	</tr>
                        </thead>
                        <tbody>
                        	<t t-foreach="docs" t-as="doc">
	                        	<tr>
	                        		<td>
										<t t-esc="doc_index + 1"/>
									</td>
	                        		<td>
	                                    <t t-esc="doc['date']"/>
	                                </td>
	                                
	                                <td>
	                                    <t t-esc="doc['name']"/>
	                                </td>
	                                <td>

	                                    <t t-esc="'{0:,.2f}'.format(float(doc['amount']))"/>
	                                </td>
	                                <td>
	                                    <t t-esc="doc['description']"/>
	                                </td>
	                        	</tr>
	                        </t>
	                        <tr class="table-active">
	                        	<td colspan="3">
	                        		<b>
	                        			الجملة
	                        		</b>
	                        	</td>
	                        	<td  class="text-center">
	                        		<b>
	                        			<t t-esc="sum(t['amount'] for t in docs)"/>
	                        		</b>
	                        	</td>
	                        	<td></td>
	                        </tr>
                        </tbody>
                    </table>
                </div>
			</t>
	</template>


</odoo>