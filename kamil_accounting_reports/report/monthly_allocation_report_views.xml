<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	
	<!-- Monthly Allocation Report-->
	<report 
		id="monthly_allocation_report"
		model="wiz.monthly.allocation"
		string="Monthly Allocation Report"
		report_type="qweb-html"
		name="kamil_accounting_reports.monthly_allocation_template"
		paperformat="kamil_accounting_reports.paperformat_a3"

	/>


	<!-- Monthly Allocation Report Template-->
	<template id="monthly_allocation_template">
			<t t-call="web.html_container">
                <div class="page">

					<div class="text-center">
					<img t-if="company_id_logo" t-att-src="image_data_uri(company_id_logo)" class="img-fluid oe_slides_channel_thumbnail" alt="Logo"/>
					</div>
					<br/><br/>
						<div dir="rtl" style="float:right;text-align:start;">
							<a href="#" target="_blank">
								<svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-printer" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
									<path d="M11 2H5a1 1 0 0 0-1 1v2H3V3a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v2h-1V3a1 1 0 0 0-1-1zm3 4H2a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h1v1H2a2 2 0 0 1-2-2V7a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2h-1v-1h1a1 1 0 0 0 1-1V7a1 1 0 0 0-1-1z"/>
									<path fill-rule="evenodd" d="M11 9H5a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1zM5 8a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H5z"/>
									<path d="M3 7.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z"/>
								</svg>
							</a>
						</div>
						<br/><br/>
							
                	
					<div>
						<h3 style="font-family:Calibri;" class="text-center">
							<b>
								<t t-if="month" >
									تخصيص شهر 
									<t t-esc="month"/>
								</t>

								<t t-if="year" >
									<t t-esc="year"/>
								</t>
							</b>
						</h3>	
						<br/><br/>
					</div>
					<table dir="rtl"  class="text-right table table-condensed table-hover" border="1">
                    	<thead>
                        	<tr>
								<th>البيان</th>
								<th>المبلغ المخصص</th>
								<th>الدواء</th>
								<th>المعامل</th>
								<th>المحولة</th>
								<t t-foreach="com_list" t-as="c">
									<th><t t-esc="c['name']"/></th>
								</t>
								<th>اقساط</th>
								<th>الاجمالي</th>
								<th>الاجمالي المحول للولاية</th>
							</tr>
                        </thead>
                        <tbody>
                        	<t t-foreach="docs" t-as="doc">
	                        	<tr>
	                        		<td>
	                                    <t t-esc="doc['company']"/>
	                                </td>
	                                <td>
	                                	<t t-esc="'{0:,.2f}'.format(float(doc['amount']))"/>
	                                </td>
	                                <td>
	                                	<t t-esc="'{0:,.2f}'.format(float(doc['medicine']))"/>
	                                </td>
	                                <td>
	                                	<t t-esc="'{0:,.2f}'.format(float(doc['labs']))"/>
	                                </td>
	                                <td>
	                                	<t t-esc="'{0:,.2f}'.format(float(doc['transformed']))"/>
	                                </td>
	                               
	                               <t t-foreach="doc['com_data']" t-as="a">
										<td>
											<t t-esc="a"/>
											<!-- <t t-esc="'{0:,.2f}'.format(float(c['amount']))"/> -->
										</td>
									</t>


									<td>
	                                	<t t-esc="'{0:,.2f}'.format(float(doc['other']))"/>
	                                </td>
	                                <td>
	                                	<t t-esc="'{0:,.2f}'.format(float(doc['total']))"/>
	                                </td>
	                                <td>
	                                	<t t-esc="'{0:,.2f}'.format(float(doc['branch_total']))"/>
	                                </td>
	                                
	                        	</tr>
	                        </t>
	                      <!--  <tr>
                        		<th colspan="4"><b>الاجمالي</b></th>
                    		 	<t t-foreach="total_data" t-as="c">
                                	 <td>
                                	 	<t t-esc="'{0:,.2f}'.format(float(c['total_debit']))"/>
                                	 </td>
                              		<td >
                              			<t t-esc="'{0:,.2f}'.format(float(c['total_credit']))"/>
                              		</td>
                                </t>	
                        	</tr> -->
                        </tbody>
                    </table>
                </div>
			</t>
	</template>


</odoo>