<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	
	<!-- Revenues Budget Report-->
	<report 
		id="revenues_budget_report"
		model="revenues.budget.wizard"
		string="Revenues Budget Report"
		report_type="qweb-html"
		name="kamil_accounting_reports.revenues_budget_template"
	/>


	<!-- Revenues Budget Template-->
	<template id="revenues_budget_template">
			<t t-call="web.html_container">
				<div class="page">

					<div class="text-center">
					<img t-if="company_id_logo" t-att-src="image_data_uri(company_id_logo)" class="img-fluid oe_slides_channel_thumbnail" alt="Logo"/>
					</div>
					<br/><br/>
					<div dir="rtl" style="float:right;text-align:start;">
						<a href="#" target="_blank">
							<svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-printer" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
								<path d="M11 2H5a1 1 0 0 0-1 1v2H3V3a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v2h-1V3a1 1 0 0 0-1-1zm3 4H2a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h1v1H2a2 2 0 0 1-2-2V7a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2h-1v-1h1a1 1 0 0 0 1-1V7a1 1 0 0 0-1-1z"/>
								<path fill-rule="evenodd" d="M11 9H5a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1zM5 8a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H5z"/>
								<path d="M3 7.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z"/>
							</svg>
						</a>
					</div>
					<br/>
					<br/>



					<div>
						<h3 style="font-family:Calibri;" class="text-center">
							<b>Revenues Budget</b>
						</h3>				
					</div>
					
					<table  dir="rtl" class="text-right table table-condensed table-hover">
						<thead>
							<tr>
								<th>No</th>
								<th>Item</th>
								<th>Planned Amount</th>
								<th>Practical Amount</th>
								<th>Remaining Value</th>
								<th>Percentage</th>
							</tr>
						</thead>
						<tbody>
							<t t-foreach="docs" t-as="doc">
								<tr>
									<td>
										<t t-esc="doc_index + 1"/>
									</td>
									<td>
										<t t-esc="doc['item']"/>
									</td>
									<td>
										<t t-esc="doc['planned_amount']"/>
									</td>
									<td>
										<t t-esc="doc['practical_amount']"/>
									</td>
									<td>
										<t t-esc="doc['remaining_value']"/>
									</td>
									<td>
										<t t-esc="doc['percentage']"/>
									</td>
									
								</tr>

							</t>
							<tr>
                        		<th colspan="2"><b>Total</b></th>
                        		<td >
                        			<t t-esc="sum([p['planned_amount'] for p in docs])" />
                        		</td>
                        		<td >
                        			<t t-esc="sum([p['practical_amount'] for p in docs])" />
                        		</td>
                        		<td >
                        			<t t-esc="sum([p['remaining_value'] for p in docs])" />
                        		</td>
                        		<td >
                        			<t t-esc="sum([p['percentage'] for p in docs])" />
                        		</td>
                        	</tr>
						</tbody>
					</table>
				</div>
			</t>
	</template>


</odoo>