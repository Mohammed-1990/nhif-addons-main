<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	
	<!-- profit loss Report-->
	<report 
		id="profit_loss_report"
		model="wiz.profit.loss"
		string="Profit loss Report"
		report_type="qweb-html"
		name="kamil_accounting_reports.profit_loss_template"
	/>


	<!-- profit loss Template-->
	<template id="profit_loss_template">
			<t t-call="web.html_container">
				<div class="page">
				<div class="text-center">
					<img t-if="company_id_logo" t-att-src="image_data_uri(company_id_logo)" class="img-fluid oe_slides_channel_thumbnail" alt="Logo"/>
				</div>
				<br/><br/>
				<div dir="rtl" style="float:right;text-align:start;">
					<a href="#" target="_blank">
						<svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-printer" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
							<path d="M11 2H5a1 1 0 0 0-1 1v2H3V3a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v2h-1V3a1 1 0 0 0-1-1zm3 4H2a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h1v1H2a2 2 0 0 1-2-2V7a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2h-1v-1h1a1 1 0 0 0 1-1V7a1 1 0 0 0-1-1z"/>
							<path fill-rule="evenodd" d="M11 9H5a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1zM5 8a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H5z"/>
							<path d="M3 7.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z"/>
						</svg>
					</a>
				</div>
				<br/>

					<div class="text-center">

						<strong class="text-center">
							<b>حساب التشغيل</b>
							<br/>
							<b>
								
							للفترة من
							<t t-esc="date_from"/>
							الى
							<t t-esc="date_to"/>
						
							</b>
						</strong>

						<br/><br/>
					</div>
					 <div dir="rtl" style="float:right;text-align:start;">
                        <strong>
                        	<t t-if="len(selected_company_names) == 1">
                        		الفرع :
                        	</t>

                        	<t t-if="len(selected_company_names) > 1">
                        		الفروع :
                        	</t>
                        	<t t-foreach="selected_company_names" t-as="company_name">
                        		<t t-esc="company_name"/>,
                        	</t>
                        </strong>
                        <br/>
                    </div>
                    
                    <br/><br/>

					<table dir="rtl" border="1" class="text-right  table-bordered" style="float:right;text-align:start;">

                    	<thead>
                        	<tr style="page-break-inside: avoid;" class="table-active">
                        		<td class="text-center fit" rowspan="2" style="font:300; white-space: nowrap;width: 1%; padding:5px;"><b>البيان</b></td>
                        		<td class="text-center fit" rowspan="2" style="font:300; white-space: nowrap;width: 1%; padding:5px;">
                        			<div style="margin-right:50px; float:right;text-align:start;">
                        				<b> رقم الايضاح</b> 
                        			</div>
                        		</td>

                    		
                        		<td colspan="2" class="text-center fit" style="font:300; white-space: nowrap;width: 1%; padding:5px;">
                        			<div class="text-center">
	                        			<b>
											العام المالي  
											<t t-esc="current_year"/>
										</b>
									</div>
                        		</td>

                        		<td colspan="2" class="text-center fit" style="font:300; white-space: nowrap;width: 1%; padding:5px;">
                        			<div class="text-center">
	                        			<b>
											العام المالي  
											<t t-esc="last_year"/>
										</b>
									</div>
                        		</td>
                        	
                        	
                        	</tr>

                        	<tr style="page-break-inside: avoid;" class="table-active">
                        		<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
                        			<div style="margin-right:50px; float:right;text-align:start;">
	                        			<b>جزئي</b>
	                        		</div>
                        		</td>
                        		<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
                        			<div style="margin-right:50px; float:right;text-align:start;">
                        				<b>كلي</b>
                        			</div>
                        		</td>
                        		<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
                        			<div style="margin-right:50px; float:right;text-align:start;">
                        				<b>جزئي</b>
                        			</div>
                        		</td>
                        		<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
                        			<div style="margin-right:50px; float:right;text-align:start;">
                        				<b>كلي</b>
                        			</div>
                        		</td>
                        	</tr>
                        </thead>
                        <tbody>
                        	<tr style="page-break-inside: avoid;">
                        		<td class="table-active" colspan="6" style="font:300; white-space: nowrap;width: 1%; padding:5px;">
                        			<strong>
                        				<div style="margin-right:50px; float:right;text-align:start;">
                        					الموارد
                        				</div>
                        			</strong>
                        		</td>
                        	</tr>
                        	<t t-foreach="revenues_data_rows" t-as="revenues_row">
                        		<tr style="page-break-inside: avoid;">
									
									<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">											
										<a data-toggle="collapse" t-attf-href="#col#{revenues_row['account_id']}" aria-expanded="false"  style="float:right;text-align:start;">
											<div style="margin-right:25px;">
												<t class="text-center" t-esc="revenues_row['account_name']"/>
											</div>
										</a>
									</td>

									<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
										<div style="margin-right:50px; float:right;text-align:start;">
											<t class="text-center fit" t-esc="revenues_row['clarification_number']"/>
										</div>
									</td>
									<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
										<div style="margin-right:50px; float:right;text-align:start;">
											<t class="text-center fit" t-esc="revenues_row['current_balance']"/>
										</div>
									</td>
									<td></td>
									<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
										<div style="margin-right:50px; float:right;text-align:start;">
											<t class="text-center fit" t-esc="revenues_row['last_balance']"/>
										</div>
									</td>
									<td></td>
								</tr>

								<tr class="collapse out" t-attf-id="col#{revenues_row['account_id']}">
									<t t-foreach="revenues_row['braches_list']" t-as="branch_line">
										<tr class="collapse out" t-attf-id="col#{revenues_row['account_id']}">
											<td colspan="2" style="font:300; white-space: nowrap;width: 1%; padding:5px;">
												<div style="margin-right:50px; float:right;text-align:start;">
													<div style="margin-right:50px;">
													<t t-esc="branch_line['brach_name']"/>
													</div>
												</div>
											</td>
											<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
												<div style="margin-right:50px;">
													<div style="margin-right:50px; float:right;text-align:start;">
													<t t-esc="branch_line['current_balance']"/>
													</div>
												</div>
											</td>
											<td></td>
											<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
												<div style="margin-right:50px;">
													<div style="margin-right:50px; float:right;text-align:start;">
													<t t-esc="branch_line['last_balance']"/>
													</div>
												</div>
											</td>
										</tr>
									</t>
								</tr>

                        	</t>

                        	<tr class="table-active">
                        		<td colspan="3" style="font:300; white-space: nowrap;width: 1%; padding:5px;">
                        			<strong>
                        				<div style="margin-right:50px; float:right;text-align:start;">
                        					إجمالي الموارد
                        				</div>
                        			</strong>
                        		</td>
                        		<td>
                        			<div style="margin-right:50px; float:right;text-align:start;">
                        				<t t-esc="current_total_revenues"/>
                        			</div>
                        		</td>
                        		<td></td>
                        		<td>
                        			<div style="margin-right:50px; float:right;text-align:start;">
                        				<t t-esc="last_total_revenues"/>
                        			</div>
                        		</td>
                        	</tr>









       						<tr>
                        		<td class="table-active" colspan="6" style="font:300; white-space: nowrap;width: 1%; padding:5px;">
                        			<strong>
                        				<div style="margin-right:50px; float:right;text-align:start;">
                        					المصروفات
                        				</div>
                        			</strong>
                        		</td>
                        	</tr>
                        	<t t-foreach="expenses_data_rows" t-as="expenses_row">
                        		<tr style="page-break-inside: avoid;">
									
									<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">											
										<a data-toggle="collapse" t-attf-href="#col#{expenses_row['account_id']}" aria-expanded="false"  style="margin-right:50px; float:right;text-align:start;">

											<div style="margin-right:25px;">
												<t class="text-center" t-esc="expenses_row['account_name']"/>
											</div>
										</a>
									</td>

									<td class="text-center">
										<div style="margin-right:50px; float:right;text-align:start;">
											<t class="text-center fit" t-esc="expenses_row['clarification_number']"/>
										</div>
									</td>
									<td>
										<div style="margin-right:50px; float:right;text-align:start;">
											<t class="text-right fit" t-esc="expenses_row['current_balance']"/>
										</div>
									</td>
									<td></td>
									<td>
										<div style="margin-right:50px; float:right;text-align:start;">
											<t class="text-right fit" t-esc="expenses_row['last_balance']"/>
										</div>
									</td>
									<td></td>
								</tr>


								<tr class="collapse out" t-attf-id="col#{expenses_row['account_id']}">
									<t t-foreach="expenses_row['braches_list']" t-as="branch_line">
										<tr class="collapse out" t-attf-id="col#{expenses_row['account_id']}">
											
											<td colspan="2" style="font:300; white-space: nowrap;width: 1%; padding:5px;">
												<div style="margin-right:50px;">
													<div style="margin-right:50px; float:right;text-align:start;">
													<t t-esc="branch_line['brach_name']"/>
													</div>
												</div>
											</td>
											<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
												<div style="margin-right:50px;">
													<div style="margin-right:50px; float:right;text-align:start;">
													<t t-esc="branch_line['current_balance']"/>
													</div>
												</div>
											</td>
											<td></td>
											<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
												<div style="margin-right:50px;">
													<div style="margin-right:50px; float:right;text-align:start;">
													<t t-esc="branch_line['last_balance']"/>
													</div>
												</div>
											</td>
										</tr>
									</t>
								</tr>

                        	</t>

                        	<tr class="table-active">
                        		<td colspan="3" style="font:300; white-space: nowrap;width: 1%; padding:5px;">
                        			<strong>
                        				<div style="margin-right:50px; float:right;text-align:start;">
                        					إجمالي المصروفات
                        				</div>
                        			</strong>
                        		</td>
                        		<td>
                        			<div style="margin-right:50px; float:right;text-align:start;">
                        				<t t-esc="current_total_expenses"/>
                        			</div>
                        		</td>
                        		<td></td>
                        		<td>
                        			<div style="margin-right:50px; float:right;text-align:start;">
                        				<t t-esc="last_total_expenses"/>
                        			</div>
                        		</td>
                        	</tr>

                        	<tr class="table-active">
                        		<td class="text-center" colspan="2" style="font:300; white-space: nowrap;width: 1%; padding:5px;">
                        			<strong>
                        				<div style="margin-right:50px; float:right;text-align:start;">
                        					صافي رصيد التشغيل
                        				</div>
                        			</strong>
                        		</td>

                        		<td class="text-center" colspan="2" style="font:300; white-space: nowrap;width: 1%; padding:5px;">
                        			<strong>
                        				<div style="margin-right:50px; float:right;text-align:start;">
                        					<t t-esc="current_net_profit"/><br/> <t t-esc="current_type"/>
                        				</div>
                        			</strong>
                        		</td>

                        		<td class="text-center" colspan="2" style="font:300; white-space: nowrap;width: 1%; padding:5px;">
                        			<strong>
                        				<div style="margin-right:50px; float:right;text-align:start;">
                        					<t t-esc="last_net_profit"/><br/> <t t-esc="last_type"/>
                        				</div>
                        			</strong>
                        		</td>
                        	</tr>





                        </tbody>
                    </table>

                    <div dir="rtl" style="float:right;text-align:start;">
	                    <br/><br/><br/>
	                    <strong>
	                    	التوقيعات
	                    </strong>
	                </div>

                     
                    <hr/>
                    <hr/>
                    <p></p>
                    <table dir="rtl" border="1" class="text-right  table table-bordered" style="float:right;text-align:start;">
						<tr class="table-active">
							<td> المدير المالي </td>
							<td> مدير الشؤون المالية والادارية </td>
							<td> المدير العام/مدير الفرع </td>
						</tr>

						<tr>
							<td></td>
							<td></td>
							<td></td>
						</tr>
					</table>



                </div>
			</t>
	</template>


</odoo>