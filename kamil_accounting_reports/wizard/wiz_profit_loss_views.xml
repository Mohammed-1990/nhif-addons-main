<?xml version="1.0" encoding="utf-8"?>
<odoo>
	

	<!-- Form wiz profit loss report -->
	<record id="view_wiz_profit_loss_form" model="ir.ui.view">
		<field name="name">wiz.profit.loss.form</field>
		<field name="model">wiz.profit.loss</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group col="4">
						<field name="date_from"/>
						<field name="date_to"/>
					</group>
					<group>
						<field name="company_ids" widget="many2many_tags" options="{'no_create':True}" groups="kamil_accounting_financial_ratification.hq_group"/>
					</group>
					<footer>
						<button name="print_report" type="object" string="print" class="btn-primary"/>
						<button string="Cancel" special="cancel" class="btn-secondary"/>
					</footer>
				</sheet>
			</form>
		</field>
	</record>



	<!-- Wiz profit loss-->
	<act_window
		id="action_wiz_profit_loss"
		name="Profit Loss Report"
		res_model="wiz.profit.loss"
		view_mode="form"
		target="new"
	/>

		<menuitem 
		id="menu_wiz_profit_loss" 
		sequence="2"
		parent="kamil_accounting_reports.menu_account_report_1"
	 	action="action_wiz_profit_loss"/>


</odoo>