<?xml version="1.0" encoding="utf-8"?>
<odoo>
	

	<record id="view_wiz_clarifications_form" model="ir.ui.view">
		<field name="name">Clarifications</field>
		<field name="model">wiz.clarifications</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group col="4">
						<field name="clarification_number" />
						<field name="account_id" options="{'no_create':True,'no_open':True,'no_edit':True}"/>
						<field name="date_to" />
					</group>
					<footer>
						<button name="print_report" type="object" string="print" class="btn-primary"/>
						<button string="Cancel" special="cancel" class="btn-secondary"/>
					</footer>
				</sheet>
			</form>
		</field>
	</record>


	<act_window
		id="action_wiz_clarifications"
		name="Clarifications"
		res_model="wiz.clarifications"
		view_mode="form"
		target="new"
	/>

	<menuitem 
		id="menu_wiz_clarifications" 
		sequence="5"
		string="Clarifications"
		parent="kamil_accounting_reports.menu_account_report_1"
	 	action="action_wiz_clarifications"/>

</odoo>