<?xml version="1.0" encoding="utf-8"?>
<odoo>
	

	<!-- Form Wiz Ratification report -->
	<record id="view_wiz_budget_monthly_form" model="ir.ui.view">
		<field name="name">wizard.budget.monthly.report.form</field>
		<field name="model">wizard.budget.monthly.report</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group col="4">
						<field name="budget_id" options="{'no_create':'1'}" required="1"/>
						<field name="account_id" options="{'no_create':'1'}"  required="1"/>

					</group>
					<footer>
						<button name="print_report" type="object" string="print" class="btn-primary"/>
						<button string="Cancel" special="cancel" class="btn-secondary"/>
					</footer>
				</sheet>
			</form>
		</field>
	</record>



	<!-- Action Ratification report-->
	<act_window
		id="action_budget_monthly"
		name="Budget Monthly Report"
		res_model="wizard.budget.monthly.report"
		view_mode="form"
		target="new"
	/>

	<menuitem id="menu_budget_monthly" sequence="2" parent="kamil_accounting_budget.menu_budget_report_main" action="action_budget_monthly"/>


</odoo>