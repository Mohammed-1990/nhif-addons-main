<odoo>
	<data>
		<record id="view_revenues_budget_wizard_form" model="ir.ui.view">
			<field name='name'>revenues.budget.wizard.form</field>
			<field name='model'>revenues.budget.wizard</field>
			<field name='arch' type='xml'>
				<form>
					<sheet>
						<group col="4">
							<field name="date_from"/>
							<field name="date_to"/>
							<field name="budget_ids" widget="many2many_tags" options="{'no_create':True,'no_edit':True,'no_open':True}"/>
							<field name="budget_item_ids" widget="many2many_tags" options="{'no_create':True,'no_edit':True,'no_open':True}"/>
						</group>
						<footer>
						<button name='get_report' string='Print' type='object' class="oe_highlight"/>
							<button string="Cancel" special="cancel"/>
						</footer>
					</sheet>
				</form>
			</field>
	</record>

	<record id="action_revenues_budget_wizard" model="ir.actions.act_window">
		<field name="name">Revenues Budget</field>
		<field name="res_model">revenues.budget.wizard</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>


	<menuitem 
		id="menu_revenues_budget" 
		sequence="2"
		parent="menu_accounting_report"
	 	action="action_revenues_budget_wizard"/>

	</data>
</odoo>