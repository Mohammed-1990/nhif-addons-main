<odoo>
	<data>
		<record id="consolidated_account_statement_wizard_form" model="ir.ui.view">
			<field name='name'>Consolidated Group Statement</field>
			<field name='model'>consolidated.group.statement.wizard</field>
			<field name='arch' type='xml'>
				<form>
					<sheet>
						<group col="4">
							<field name="report_type" widget="radio" options="{'horizontal':True}"/>
							<field name="account_id" options="{'no_create':True}" string="Choose Account/Group"/>
						</group>
						<group col="4">
							<field name="date_from" required="1"/>
							<field name="date_to" required="1"/>
						</group>
						<group>
							<field name="company_ids" widget="many2many_tags"  options="{'no_create':True}" groups="kamil_accounting_financial_ratification.hq_group"/>
						</group>
						<footer>
						<button  name='get_report' string='Print' type='object' class="oe_highlight"/>
							<button string="Cancel" special="cancel"/>
						</footer>
					</sheet>
				</form>
			</field>
	</record>

	<record id="action_group_statement_wizard" model="ir.actions.act_window">
		<field name="name">Consolidated Group Statement</field>
		<field name="res_model">consolidated.group.statement.wizard</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
		<!-- <field name="new_window" eval="True"></field> -->
	</record>

	<menuitem 
		id="menu_consolidated_reports"
		name="Consolidated Reports" 
		sequence="1"
		parent="account.menu_finance_reports"/>

	<menuitem 
		id="menu_consolidated_group_statement" 
		sequence="1"
		parent="menu_consolidated_reports"
	 	action="action_group_statement_wizard"/>

	</data>
</odoo>