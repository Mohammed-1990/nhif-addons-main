<?xml version="1.0" encoding="utf-8"?>
<odoo>
	

	<!-- Form Wiz Payment report -->
	<record id="view_wiz_bank_statement_report_form" model="ir.ui.view">
		<field name="name">wizard.bank.statement.report.form</field>
		<field name="model">wizard.bank.statement.report</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group col="4">
						<field name="date_from" required="1"/>
						<field name="date_to" required="1"/>
						<field name="bank_id" options="{'no_create':'1'}" required="1"/>
					</group>
					<footer>
						<button name="print_report" type="object" string="print" class="btn-primary"/>
						<button string="Cancel" special="cancel" class="btn-secondary"/>
					</footer>
				</sheet>
			</form>
		</field>
	</record>



	<!-- Action Payment report-->
	<act_window
		id="action_bank_statement_report"
		name="Bank Statement Report"
		res_model="wizard.bank.statement.report"
		view_mode="form"
		target="new"
	/>



	<menuitem id="menu_bank_statement_report"  sequence="3" parent="kamil_accounting_reports.menu_report_payment" action="action_bank_statement_report" name="Bank Statement Report"/>

</odoo>