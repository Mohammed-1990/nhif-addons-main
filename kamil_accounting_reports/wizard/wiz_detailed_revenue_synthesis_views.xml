<?xml version="1.0" encoding="utf-8"?>
<odoo>
	

	<!-- Form Wiz Ratification report -->
	<record id="view_detailed_revenues_synthesis_form" model="ir.ui.view">
		<field name="name">detailed.revenues.synthesis.wizard.form</field>
		<field name="model">detailed.revenues.synthesis.wizard</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group col="4">
						<field name="account_id"  options="{'no_create':'1'}" />
						<field name="company_ids" widget="many2many_tags"  options="{'no_create':'1'}" groups="kamil_accounting_financial_ratification.hq_group"/>
						<!-- <field name="year"/> -->
					</group>
					<group col="4">
						<field name="date_from" required="1"/>
						<field name="date_to" required="1"/>
					</group>
					<footer>
						<button name="get_report" type="object" string="print" class="btn-primary"/>
						<button string="Cancel" special="cancel" class="btn-secondary"/>
					</footer>
				</sheet>
			</form>
		</field>
	</record>



	<!-- Wiz Revenues Journal-->
	<act_window
		id="action_detailed_revenues_synthesis_wizard"
		name="Detailed Revenues Synthesis Report"
		res_model="detailed.revenues.synthesis.wizard"
		view_mode="form"
		target="new"
	/>


	<menuitem 
		id="menu_detailed_revenues_synthesis_wizard" 
		sequence="6"
		parent="kamil_accounting_reports.menu_accounting_report"
	 	action="action_detailed_revenues_synthesis_wizard"/>


</odoo>