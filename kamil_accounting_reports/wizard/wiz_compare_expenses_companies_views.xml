<odoo>
	<data>
		<record id="view_compare_expenses_compaies_wizard_form" model="ir.ui.view">
			<field name='name'>compare.expenses.companies.wizard.form</field>
			<field name='model'>compare.expenses.companies.wizard</field>
			<field name='arch' type='xml'>
				<form>
					<sheet>
						<separator string="Current Perid"/>
						<group col="4">
							<field name="date_from1"/>
							<field name="date_to1"/>
						</group>
						<separator string="Last Perid"/>
						<group col="4">
							<field name="date_from2"/>
							<field name="date_to2"/>
						</group>
						<footer>
						<button name='get_report' string='Print' type='object' class="oe_highlight"/>
							<button string="Cancel" special="cancel"/>
						</footer>
					</sheet>
				</form>
			</field>
	</record>

	<record id="action_compare_expenses_companies_wizard" model="ir.actions.act_window">
		<field name="name">‫ تقرير مقارنة المصروفات بين الفترات للفروع والمركز</field>
		<field name="res_model">compare.expenses.companies.wizard</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>


	<menuitem 
		name="‫ تقرير مقارنة المصروفات بين الفترات للفروع والمركز"
		id="menu_compare_expenses_companies" 
		sequence="8"
		parent="kamil_accounting_reports.menu_report_payment"
	 	action="action_compare_expenses_companies_wizard"/>

	</data>
</odoo>