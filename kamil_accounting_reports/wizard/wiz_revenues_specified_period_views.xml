<odoo>
	<data>
		<record id="revenues_specified_period_wizard_form" model="ir.ui.view">
			<field name='name'>Report Revenues Specified Period</field>
			<field name='model'>revenues.specified.period.wizard</field>
			<field name='arch' type='xml'>
				<form>
					<sheet>
						<group>
							<field name="type" string="The Period" widget="radio"  options="{'horizontal': true}" />
						</group>
						<group col="4">
							<field name="date_from" required="1"/>
							<field name="date_to" required="1"/>
							<!-- <field name="revenue_account_ids" widget="many2many_tags" options="{'no_create':True,'no_edit':True,'no_open':True}"/> -->
							<field name="account_id" options="{'no_create':True,'no_edit':True,'no_open':True}" required="1" string="Choose Account/Group"/>

						</group>
						<group>
							<field name="company_ids" widget="many2many_tags"  groups="kamil_accounting_financial_ratification.hq_group"/>
						</group>
						
						<footer>
						<button name='get_report' string='Print' type='object' class="oe_highlight"/>
							<button string="Cancel" special="cancel"/>
						</footer>
					</sheet>
				</form>
			</field>
	</record>

	<record id="action_revenues_specified_period_wizard" model="ir.actions.act_window">
		<field name="name">Revenues Specified Period</field>
		<field name="res_model">revenues.specified.period.wizard</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

	<menuitem 
		id="menu_revenues_specified_period_wizard" 
		sequence="2"
		parent="menu_accounting_report"
	 	action="action_revenues_specified_period_wizard"/>


	</data>
</odoo>