<odoo>
	<data>
		<record id="view_compare_expenses_revenues_wizard_form" model="ir.ui.view">
			<field name='name'>rcompare.expenses.wizard.form</field>
			<field name='model'>compare.expenses.wizard</field>
			<field name='arch' type='xml'>
				<form>
					<sheet>
						<separator string="Current Perid"/>
						<group col="4">
							<field name="date_from1"/>
							<field name="date_to1"/>
						</group>
						<separator string="Previous Perid"/>
						<group col="4">
							<field name="date_from2"/>
							<field name="date_to2"/>
						</group>
						<group col="4">
							<!-- <field name="budget_item_ids" widget="many2many_tags" options="{'no_create':True,'no_edit':True,'no_open':True}" required="1"/> -->


							<field name="budget_id" options="{'no_create':True}" required="1"/>
							
							<field name="account_id" options="{'no_create':True,'no_edit':True,'no_open':True}" required="1" string="Choose Account/Group"/>


						</group>
						<footer>
						<button name='get_report' string='Print' type='object' class="oe_highlight"/>
							<button string="Cancel" special="cancel"/>
						</footer>
					</sheet>
				</form>
			</field>
	</record>

	<record id="action_compare_expenses_wizard" model="ir.actions.act_window">
		<field name="name">Compare Expenses</field>
		<field name="res_model">compare.expenses.wizard</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>


	<menuitem 
		id="menu_compare_expenses" 
		sequence="5"
		parent="kamil_accounting_reports.menu_report_payment"
	 	action="action_compare_expenses_wizard"/>

	</data>
</odoo>