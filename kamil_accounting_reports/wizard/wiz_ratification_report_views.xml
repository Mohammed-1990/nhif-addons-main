<?xml version="1.0" encoding="utf-8"?>
<odoo>
	

	<!-- Form Wiz Ratification report -->
	<record id="view_ratification_wiz_report_form" model="ir.ui.view">
		<field name="name">ratification.report.form</field>
		<field name="model">wizard.ratification.report</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group col="4">
						<field name="date_from" required="1"/>
						<field name="date_to" required="1"/>
						<field name="partner_ids" widget="many2many_tags" options="{'no_create':'1'}"/>
						<!-- <field string="Group/Budget Item" name="group_id" options="{'no_create':'1'}"/> -->
					</group>
					<group string="The States" col="8">
						<field name="is_draft"/>
						<field name="is_executed"/>
						<field name="is_approved"/>
						<field name="is_payment_created"/>
						<field name="is_payment_confirmed"/>
						<field name="is_paid"/>
						<field name="is_canceled"/>
					</group>
					<footer>
						<button name="print_report" type="object" string="print" class="btn-primary"/>
						<button string="Cancel" special="cancel" class="btn-secondary"/>
					</footer>
				</sheet>
			</form>
		</field>
	</record>



	<!-- Action Ratification report-->
	<act_window
		id="action_ratification_report"
		name="Ratifications Report for a Specific Period"
		res_model="wizard.ratification.report"
		view_mode="form"
		target="new"
	/>


	<menuitem id="menu_report" name="Report" sequence="100" parent="kamil_accounting_financial_ratification.ratification_main_menu"/>


	<menuitem id="menu_ratification_report"  sequence="1" parent="menu_report" action="action_ratification_report" name="Ratifications Report for a Specific Period"/>

</odoo>