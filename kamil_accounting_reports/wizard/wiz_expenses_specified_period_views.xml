<odoo>
	<data>
		<record id="revenues_expenses_period_wizard_form" model="ir.ui.view">
			<field name='name'>Report Expenses Specified Period</field>
			<field name='model'>expenses.specified.period.wizard</field>
			<field name='arch' type='xml'>
				<form>
					<sheet>
						<group>
							<field name="type" string="The Period" widget="radio"  options="{'horizontal': true}" />
						</group>
						<group col="4">
							<field name="date_from" required="1"/>
							<field name="date_to" required="1"/>
							<!-- <field name="expenses_account_ids" widget="many2many_tags" options="{'no_create':True,'no_edit':True,'no_open':True}"/> -->
							
							<field name="account_id" options="{'no_create':True,'no_edit':True,'no_open':True}" required="1" string="Choose Account/Group"/>


						</group>
						<group>
							<field name="company_ids" widget="many2many_tags"  options="{'no_create':True}" groups="kamil_accounting_financial_ratification.hq_group"/>
						</group>
						
						<footer>
						<button name='get_report' string='Print' type='object' class="oe_highlight"/>
							<button string="Cancel" special="cancel"/>
						</footer>
					</sheet>
				</form>
			</field>
	</record>

	<record id="action_expenses_specified_period_wizard" model="ir.actions.act_window">
		<field name="name">Expenses Specified Period</field>
		<field name="res_model">expenses.specified.period.wizard</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

	<menuitem 
		id="menu_expenses_specified_period_wizard" 
		sequence="3"
		parent="kamil_accounting_reports.menu_report_payment"
	 	action="action_expenses_specified_period_wizard"/>


	</data>
</odoo>