 		<template id="inherit_login_layout" inherit_id="web.login_layout" name="inherit Login Layout">
 		
		        <t t-call="web.layout" >
		            <t t-set="html_data" t-value="{'style': 'height: 100%;'}"/>
		            <t t-set="head">
		                <t t-call-assets="web.assets_common" t-js="false"/>
		                <t t-call-assets="web.assets_frontend" t-js="false"/>
		                <t t-call-assets="web.assets_common" t-css="false"/>
		                <t t-call-assets="web.assets_frontend" t-css="false"/>
		            </t>
		            <t t-set="body_classname"  />
		             <img src="/kamil_homepage_layout/static/src/header_clean.png" style=" padding-right: 50px; padding-left: 50px;  align:center; display: block;  vertical-align: middle; opacity:0.85;width:100%; height: auto; z-index:100; " />

		             <div class="page" >

		                <div class="container mb-1 pb-1">
		                    <div t-attf-class="card border-0 mx-auto mt-5 bg-100 {{login_card_classes}} o_database_list" style="max-width: 300px;">
		                        <div class="card-body">
		                           <!--  <div t-attf-class="text-center pb-3 border-bottom {{'mb-3' if form_small else 'mb-4'}}">
		                                <img t-attf-src="/web/binary/company_logo{{ '?dbname='+db if db else '' }}" alt="Logo" style="max-height:120px; max-width: 100%; width:auto"/>
		                            </div> -->
		                            <t t-raw="0"/>
		                            <div class="text-center small mt-4 pt-3 border-top" t-if="not disable_footer">
		                                <t t-if="not disable_database_manager">
		                                    <a class="border-right pr-2 mr-1" href="/web/database/manager">Manage Databases</a>
		                                </t>
		                                <a href="http://www.almedtech.com" target="_blank">Powered by <span>AlmedTech-KRT</span></a>
		                            </div>
		                        </div>
		                    </div>
		                </div>
		            </div>
		            <img src="/kamil_homepage_layout/static/src/footer.png" style=" padding-right: 50px; padding-left: 50px;  align:center; display: block;  vertical-align: middle; opacity:0.85;width:100%;height:auto; z-index:100; " />

		       </t>
		
    	</template>

    	<template id="inherit_affix_top_menu" inherit_id="website.affix_top_menu" customize_show="True" name="Affix Top Menu">
    		<xpath expr="//header" position="replace">
    			<img src="/kamil_homepage_layout/static/src/header_clean.png" style=" padding-right: 50px; padding-left: 50px;  align:center; display: block;  vertical-align: middle; opacity:0.85;width:100%;height:auto; z-index:100; " />
        		<attribute name="t-attf-class" add="#{'o_affix_enabled'}" separator=" "/>
    		</xpath>
		</template>

		<template inherit_id="web.login" id='inherit_login' name="inhiret Login">
			<xpath expr="//div[@class='form-group field-login']" position="replace">
			
	            <label for="login" >User</label>
	            <!-- <div class="col-md-8"> -->
	                <input id="login" type="text" name="login" class="form-control" required="required" autocomplete="off"/>
	            <!-- </div> -->

        	</xpath>

    	    <xpath expr="//div[@class='form-group field-password']"  position="replace">
                <label for="password">Password</label>
                <input type="password" placeholder="Password" name="password" id="password" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required" autocomplete="current-password" t-att-autofocus="'autofocus' if login else None" maxlength="4096"/>
            </xpath>


        </template>
			<record id="view_users_form_simple_modif_hide_password" model="ir.ui.view">
                <field name="name">res.users.preferences.hide.password..form</field>
                <field name="model">res.users</field>
                <field name="inherit_id" ref="base.view_users_form_simple_modif"/>
                <field name="arch" type="xml">
                    <xpath expr="//button[@name='preference_change_password']" position="replace"/>
                </field>
            </record>		
	
