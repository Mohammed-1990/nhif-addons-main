<odoo>
 
    <report id="mission_allowance_report"
            model="mission.allowance"
            string="بدل الماموريه"
            report_type="qweb-html"
            name="kamil_hr_missions.mission_allowance_report_view"
        />

    <template id="mission_allowance_report_view">
        <t t-foreach="docs" t-as="doc">
            <t t-call="web.external_layout">
            <t t-call="web.html_container">
                    <br/>
                    <div class="text-center" style="font:600;">
                        <strong>
                            <p>الادارة العامة للموارد البشرية
                            <br/>
                            قسم الاجور والمزايا<br/>
                            بدل الماموريه</p>
                        </strong>
                    </div><br/><br/>
                    <table style="width: 70%;margin: 0px auto;" dir="rtl" class="table-bordered">
                        <tr>
                            <th class="text-center table-active">رقم الماموريه</th>
                            <th class="text-center"><span t-esc="doc.mission_id.name"/></th>
                            <th class="text-center table-active">جهة الماموريه</th>
                            <th class="text-center"><span t-esc="doc.mission_id.missions_side"/></th>
                        </tr>
                        <tr>
                            <th class="text-center table-active">اجمالي المبلغ</th>
                            <th class="text-center"><span t-esc="doc.total"/></th>
                            <th class="text-center table-active">التاريخ</th>
                            <th class="text-center"><span t-esc="doc.date"/></th>
                        </tr>
                    </table><br/><br/>
                    <table style="margin:10px;width:100%;" dir="rtl" class="table-bordered">
                      <thead class="table-active" style="display: table-header-group;">
                        <tr class="table-active">
                            <th class="text-center  fit">الموظف</th>
                            <th class="text-center  fit">المسمي الوظيفي</th>
                           <th class="text-center  fit">قيمة البدل</th>
                           <th class="text-center  fit">عدد الايام</th>
                            <th class="text-center  fit">الاجمالي</th>
                           <th class="text-center  fit">الدمغة</th>
                            <th class="text-center  fit">الصافي</th>
                        </tr>
                    </thead>
                        <div class="page">
                            <t t-set="count" t-value="1"/> 
                            <t t-foreach="doc.line_ids" t-as="line">
                                <tr>
                                    <td class="text-center">
                                        <span t-esc="line.employee_id.name"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="line.job_title_id.name"/>
                                    </td>
                                    <td class="text-center">
                                      <span t-esc="line.amount"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="line.no_days"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="line.amount*doc.no_days"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="line.stamp"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="line.net"/>
                                    </td>
                                </tr>
                            </t>
                        </div>
                    </table><br/><br/><br/><br/>
                        <p style="font:600;" dir="rtl" >
                            <strong>قسم الاجور والمزايا</strong>
                            <span>
                                .........................................................................
                            </span>
                            <br/>
                            <strong> الادارة العامة للموارد البشرية</strong>
                            <span>
                                .........................................................
                            </span>
                            <br/>
                            <strong>المراجعة</strong>
                            <span>
                                .............................................................................................
                            </span>
                    </p>
                   </t>
            </t>
        </t>
    </template>
</odoo>