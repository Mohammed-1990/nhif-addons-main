<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <!-- Action Purchase Order List-->
    <act_window
            id="action_purchase_order_list"
            name="Purchase Order"
            res_model="purchase.order"
            view_type="form"
            view_mode="tree,form"
            domain="[('request_id','=',active_id)]"
            context="{'default_request_id':active_id,'default_type':type}"


    />

    <!-- Action Purchase Order to so-->
    <act_window
            id="action_purchase_order_to_so"
            name="Purchase Order"
            res_model="purchase.order"
            view_type="form"
            view_mode="form"
            context="{'default_request_id':active_id,'default_type':type}"


    />

    <!-- Form Purchase Request-->
    <record id="view_purchase_request_form" model="ir.ui.view">
        <field name="name">purchase.request.form</field>
        <field name="model">purchase.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                            name="action_branch_manager"
                            type="object"
                            string="Approve"
                            states="branch_manager"
                            class="btn-primary"
                            groups="kamil_purchase_qualifiying_suppliers.group_branch_manager"
                    />

                    <button
                            name="action_gen_man_appr"
                            type="object"
                            string="Approve"
                            class="btn-primary"
                            states="gen_man_appr"
                            groups="kamil_purchase_qualifiying_suppliers.group_general_manager"
                    />

                    <button
                            name="action_confirm_order"
                            type="object"
                            states="director_finance_admin_comm_decided"
                            string="Approve"
                            class="btn-primary"
                            groups="kamil_purchase_qualifiying_suppliers.group_dicrecor_finance_admin,kamil_purchase_qualifiying_suppliers.group_comm_decided"
                    />

                    <button
                            name="action_reset_draft"
                            type="object"
                            states="cancel"
                            string="Reset to Draft"
                    />

                    <button
                            name="action_confirm_pd"
                            type="object"
                            states="purchase_department"
                            string="Confirm"
                            class="btn-primary"
                            groups="kamil_purchase_qualifiying_suppliers.group_purch_dept"
                    />
                    <button
                            name="action_purchase_department"
                            type="object"
                            states="purchase_department2"
                            string="Confirm"
                            class="btn-primary"
                            groups="kamil_purchase_qualifiying_suppliers.group_purch_dept"
                    />
                    <button
                            name="action_branch_purchase_department"
                            string="Transformation to purchase department of branch"
                            type="object"
                            attrs="{'invisible':['|',('state','!=','purchase_department2'),('type','!=','request_for_quotaion')]}"
                            class="btn-primary"
                    />
                    <button
                            name="action_cancel"
                            type="object"
                            string="Cancel"
                            states="purchase_department,branch_manager,gen_man_appr,director_finance_admin_comm_decided"
                    />

                    <field
                            name="state"
                            widget="statusbar"
                            statusbar_visible="purchase_department,director_finance_admin_comm_decided,purchase_department2,in_process,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" attrs="{'readonly':[('state','!=','draft')]}"
                                   placeholder="Request name ....."/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="admin_id"/>
                            <field name="dept_id"/>
                            <field
                                    name="type"
                                    widget="radio"
                                    options="{'horizontal':True}"
                                    attrs="{
			 					'required':[('state','=','director_finance_admin_comm_decided')],
			 					'invisible':[('state','not in',('purchase_department2','director_finance_admin_comm_decided','in_process','done'))]}"/>
                        </group>
                        <group>
                            <field name="ordering_date" attrs="{'readonly':[('state','!=','purchase_department')]}"/>
                            <field name="is_transfer" invisible="1"/>
                        </group>
                        <group>
                            <field name="is_need_request"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Product" name="product_page">
                            <button
                                    name="%(kamil_purchase_request.action_product_filter)d"
                                    type="action"
                                    string="add product"
                                    icon="fa-plus"
                                    class="btn-primary"
                                    states="purchase_department"
                                    attrs="{'invisible': [('is_need_request', '=', True)]}"
                            />


                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id" options="{'no_create':'1'}"/>
                                    <!-- <field name="categ_id"/> -->
                                    <field name="product_qty"/>
                                    <field name="product_uom_id"/>
                                    <field name="note"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group col="4">
                                            <field name="product_id" options="{'no_create':'1'}"/>
                                            <field name="product_uom_id"/>
                                            <field name="product_qty"/>
                                            <field name="note"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree Purchase Request -->
    <record id="view_purchase_request_tree" model="ir.ui.view">
        <field name="name">purcahse.request.tree</field>
        <field name="model">purchase.request</field>
        <field name="arch" type="xml">
            <tree
                    string="Purchase Request"
                    decoration-info="state in ['purchase_department']"
                    decoration-danger="state in ['in_process']"
                    decoration-warning="state in ['branch_manager','gen_man_appr','director_finance_admin_comm_decided','purchase_department2']"
                    decoration-muted="state=='cancel'"
            >
                <field name="name"/>
                <field name="admin_id"/>
                <field name="dept_id"/>
                <field name="ordering_date"/>
                <field name="company_id"/>
                <field name="type"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Search Purchase Request -->
    <record id="view_purchase_request_search" model="ir.ui.view">
        <field name="name">purcahse.request.search</field>
        <field name="model">purchase.request</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="admin_id"/>
                <field name="dept_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Wainting Execution" name="in_process" domain="[('state','=','in_process')]"/>
                <filter string="Done" name="done" domain="[('state','=','done')]"/>

                <group string="Group By">
                    <field string="Administrative" name="admin_id" domain="[]" context="{'group_by':'admin_id'}"/>
                    <filter string="Department" name="dept_id" domain="[]" context="{'group_by':'dept_id'}"/>
                    <filter string="Type" name="type" domain="[]" context="{'group_by':'type'}"/>
                    <filter string="Status" name="state" domain="[]" context="{'group_by':'state'}"/>
                    <filter string="Date" name="Date" domain="[]" context="{'group_by':'ordering_date'}"/>
                    <filter string="Branch" name="branch" domain="[]" context="{'group_by':'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action Purchase Request-->
    <record id="action_purchase_request" model="ir.actions.act_window">
        <field name="name">Purchase Request</field>
        <field name="res_model">purchase.request</field>
        <field name="view_type=">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_purchase_request_search"/>
    </record>


    <!-- Menu Purchse Request  Root-->
    <menuitem id="menu_menu_purchase_request_root" name="Purchse Request" parent="purchase.menu_purchase_root"
              sequence="1" action="action_purchase_request"/>


    <!-- Menu Purchse Process  Root-->
    <menuitem id="menu_purchase_process" name="Purchse Process" parent="purchase.menu_purchase_root" sequence="2"/>


</odoo>