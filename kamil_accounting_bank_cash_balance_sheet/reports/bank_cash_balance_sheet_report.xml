<?xml version="1.0" encoding="utf-8" ?>
<odoo>


	<report 
		id="bank_cash_balance_sheet_report"
		model="bank.cash.balance.sheet"
		string="Bank/Cash Balance Sheet Report"
		report_type="qweb-html"
		name="kamil_accounting_bank_cash_balance_sheet.report_bank_cash_balance_sheet_template"
	/>

	<template id="report_bank_cash_balance_sheet_template">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="o">
				<t t-call="web.external_layout">
					<div class="page">


						<div dir="rtl" style="float:right;text-align:start;">
							<a href="#" target="_blank">
								<svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-printer" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
									<path d="M11 2H5a1 1 0 0 0-1 1v2H3V3a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v2h-1V3a1 1 0 0 0-1-1zm3 4H2a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h1v1H2a2 2 0 0 1-2-2V7a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2h-1v-1h1a1 1 0 0 0 1-1V7a1 1 0 0 0-1-1z"/>
									<path fill-rule="evenodd" d="M11 9H5a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1zM5 8a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H5z"/>
									<path d="M3 7.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z"/>
								</svg>
							</a>
						</div>

		                <br/><br/>

						<div class="text-center">
							<br/>
							<strong class="text-center">
								<b>
									<t t-if="o.type == 'bank'">					موازنة  <t t-esc="o.name.name"/> 
									    عن شهر  <t t-esc="o.month"/> - <t t-esc="o.year"/>
									</t>

									<t t-if="o.type == 'cash'">					موازنة خزينة <t t-esc="o.name.name"/> 
									    عن شهر  <t t-esc="o.month"/> - <t t-esc="o.year"/>	
									</t>
								</b>
							</strong>
							<br/>
						</div>

						<div>
							<table dir="rtl" border="1" class="text-right table-bordered" style="float:right;text-align:start;">
							<thead>
								<tr style="page-break-inside: avoid;" class="table-active">
									<td  style="font:300; white-space: nowrap;width: 1%; padding:5px;">
										<div style="float:right;text-align:start;">
											البيان
										</div>
									</td>
									<td  style="font:300; white-space: nowrap;width: 1%; padding:5px;">
										<div style="float:right;text-align:start;">
											القيمة 
										</div>
									</td>
									<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
										<div style="float:right;text-align:start;">
											الرصيد
										</div>
									</td>
								</tr>
							</thead>
							<tbody>

								<t t-if="o.type == 'bank'">
									<tr  style="page-break-inside: avoid;">
										<td  style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<div style="float:right;text-align:start;">
											الرصيد حسب كشف البنك
											</div>
										</td>
										<td  style="font:300; white-space: nowrap;width: 1%; padding:5px;"> 
											<div style="float:right;text-align:start;">
											<t t-esc="'{0:,.2f}'.format(float(o.balance_according_to_bank_statement))" />
											</div>
										 </td>
										<td></td>
									</tr>

									<tr>
										<td  style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<div style="float:right;text-align:start;">
											إيرادات تحت التحصيل
											</div>
										</td>
										<td  style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<div style="float:right;text-align:start;">
												<t t-esc="'{0:,.2f}'.format(float(o.revenues_under_collection))" />
											</div>
										</td>
										<td></td>
									</tr>
									<tr>
										<td  style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<div style="float:right;text-align:start;">
											الجملة
											</div>
										</td>
										<td  style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<div style="float:right;text-align:start;">
											<t t-esc="'{0:,.2f}'.format(float(o.total))" />
											</div>
										</td>
										<td></td>
									</tr>

									<tr>
										<td  style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<div style="float:right;text-align:start;">
											شيكات لم تقدم للصرف
											</div>
										</td>
										<td  style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<div style="float:right;text-align:start;">
											<t t-esc="'{0:,.2f}'.format(float(o.cheques_not_provided_for_exchange))" />
											</div>
										</td>
										<td></td>
									</tr>

									<tr>
										<td  style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<div style="float:right;text-align:start;">
												إضافات اخرى
											</div>
										</td>
										<td  style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<div style="float:right;text-align:start;">

												<t t-set="total_other_addition" t-value="0"/>
												<t t-set="total_other_subtraction" t-value="0"/>
												<t t-foreach="o.addition_ids" t-as="addition_line">
													<t t-if="addition_line.the_type == 'addition' ">
														<t t-set="total_other_addition" t-value="total_other_addition + addition_line.amount"/>
													</t>
													<t t-if="addition_line.the_type == 'subtraction' ">
														<t t-set="total_other_subtraction" t-value="total_other_subtraction + addition_line.amount"/>
													</t>
												
												</t>
												<t t-esc="'{0:,.2f}'.format(float(total_other_addition))" />
											</div>
											
										</td>
										<td></td>
									</tr>
									
									<tr>
										<td  style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<div style="float:right;text-align:start;">
												خصومات اخرى
											</div>
										</td>
										<td  style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<div style="float:right;text-align:start;">
												<t t-esc="'{0:,.2f}'.format(float(total_other_subtraction))" />
											</div>
										</td>
										<td></td>
									</tr>

									<tr>
										<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<div style="float:right;text-align:start;">
											رصيد البنك
											</div>
										</td>
										<td></td>
										<td  style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<div style="float:right;text-align:start;">
											<t t-esc="'{0:,.2f}'.format(float(o.bank_balance))" />
											</div>
										</td>
									</tr>
								</t>
								<tr>
									<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
										<div style="float:right;text-align:start;">
										الرصيد الدفتري السابق
										</div>
									</td>
									<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
										<div style="float:right;text-align:start;">
										<t t-esc="'{0:,.2f}'.format(float(o.previous_balance_book))" />
										</div>
									</td>
									<td></td>
								</tr>
								<tr>
									<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
										<div style="float:right;text-align:start;">
										إجمالي الإيرادات
										</div>
									</td>
									<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
										<div style="float:right;text-align:start;">
										<t t-esc="'{0:,.2f}'.format(float(o.total_revenues))" />
										</div>
									</td>
									<td></td>
								</tr>
								<tr>
									<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
										<div style="float:right;text-align:start;">
										إجمالي المصروفات
										</div>
									</td>
									<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
										<div style="float:right;text-align:start;">
										<t t-esc="'{0:,.2f}'.format(float(o.total_expenses))" />
										</div>
									</td>
									<td></td>
								</tr>
								<tr>
									<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
										<div style="float:right;text-align:start;">
										الرصيد الدفتري الحالي
										</div>
									</td>
									<td></td>
									<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
										<div style="float:right;text-align:start;">
										<t t-esc="'{0:,.2f}'.format(float(o.current_balance_book))" />
										</div>
									</td>
								</tr>

							</tbody>
						</table>

						<br/><br/><br/><br/>
						<table dir="rtl" border="0" class="text-right table" style="text-align:start;">
							<tr>
								<td>
									<div style="float:right;text-align:start;">
									<strong style="float:right">  أعده: .................................</strong>
									</div>
								</td>
							
								<td>
									<div style="float:right;text-align:start;">
									<strong style="float:right">  راجعه: ................................. </strong>
									</div>
								</td>
							</tr>
						</table>
					</div>
					</div>
				</t>
			</t>
		</t>
	</template>
</odoo>

