<odoo>
	<data>
		<record id="balancing_salaries_wizard_form" model="ir.ui.view">
			<field name='name'>Balancing salaries report</field>
			<field name='model'>balancing.salaries.wizard</field>
			<field name='arch' type='xml'>
    			<form>
    			    <sheet>
        	        <group col="4">
                       <field name="date_from" autocomplete="off"/>
                       <field name="date_to" autocomplete="off"/>
                       <field name="branch_id" options="{'no_create':1,'no_open':1,'no_edit':1}"/>
                       <field name="struct_ids" options="{'no_create':1,'no_open':1,'no_edit':1}" widget="many2many_tags"/>
        	        </group>
                  <footer>
                      <button name='get_report' string='Print' type='object' class="oe_highlight"/>
                      <button string="Cancel" special="cancel"/>
                  </footer>
        			</sheet>
          </form>
    	  </field>
      </record>





    <record id="action_balancing_salaries_wizard" model="ir.actions.act_window">
        <field name="name">Balancing salaries report</field>
        <field name="res_model">balancing.salaries.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
   </record>

    <menuitem name="Balancing salaries report" 
              id="menu_balancing_salaries" 
              parent="payroll_reports_main_menu" 
              action="action_balancing_salaries_wizard"
              sequence="3"/>

	</data>
</odoo>