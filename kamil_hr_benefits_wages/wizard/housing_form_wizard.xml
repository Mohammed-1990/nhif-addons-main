<odoo>
	<data>
		<record id="housing_form_wizard_form" model="ir.ui.view">
			<field name='name'>Housing Form</field>
			<field name='model'>housing.form.wizard</field>
			<field name='arch' type='xml'>
    			<form>
    			    <sheet>
        	        <group col="4">
                      <field name="date_from" autocomplete="off"/>
                      <field name="date_to" autocomplete="off"/>
                      <field name="branch_id" options="{'no_create':1,'no_open':1,'no_edit':1}"/>
                      <field name="appoiontment_ids" options="{'no_create':1,'no_open':1,'no_edit':1}" widget="many2many_tags"/>
                      <field name="employee_ids" options="{'no_create':1,'no_open':1,'no_edit':1}" widget="many2many_tags"/>
        	        </group>
                  <footer>
                      <button name='get_report' string='Print' type='object' class="oe_highlight"/>
                      <button string="Cancel" special="cancel"/>
                  </footer>
        			</sheet>
          </form>
    	 </field>
    </record>

    <record id="action_housing_form_wizard" model="ir.actions.act_window">
        <field name="name">Housing Form</field>
        <field name="res_model">housing.form.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
   </record>

    <menuitem name="Housing Form" 
        id="menu_housing_form" 
        parent="kamil_hr_benefits_wages.payroll_reports_main_menu" 
        action="action_housing_form_wizard"
        sequence="4"/>

	</data>
</odoo>