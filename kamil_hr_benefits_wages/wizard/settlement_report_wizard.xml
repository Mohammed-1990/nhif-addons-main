<odoo>
	<data>
		<record id="settlement_report_wizard_form" model="ir.ui.view">
			<field name='name'>Settlement Report</field>
			<field name='model'>settlement.report.wizard</field>
			<field name='arch' type='xml'>
    			<form>
    			    <sheet>
        	        <group col="4">
                       <field name="date_from" autocomplete="off"/>
                       <field name="date_to" autocomplete="off"/>
                       <field name="appoiontment_type" options="{'no_create':True,'no_edit':True,'no_open':True}" widget="many2many_tags"/>
                       <field name="type"/>
        	        </group>
                  <footer>
                      <button name='get_report' string='Print' type='object' class="oe_highlight"/>
                      <button string="Cancel" special="cancel"/>
                  </footer>
        			</sheet>
                </form>
    	    </field>
       </record>





    <record id="action_settlement_report_wizard" model="ir.actions.act_window">
        <field name="name">Settlement Report</field>
        <field name="res_model">settlement.report.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
   </record>

    <menuitem name="Settlement Report" 
              id="menu_settlement_report" 
              parent="payroll_reports_main_menu" 
              action="action_settlement_report_wizard"
              sequence="2"/>

	</data>
</odoo>