<odoo>
    <record id="paperformat_a4_for_hr" model="report.paperformat">
        <field name="name">A4 for hr Benefits</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">35</field>
        <field name="dpi">80</field>
    </record>

    <report id="incentive_report"
            model="hr.incentive"
            string="Incentive Report"
            report_type="qweb-html"
            name="kamil_hr_benefits_wages.hr_incentive_report_view"
            paperformat="paperformat_a4_for_hr"
        />

    <template id="hr_incentive_report_view">
        <t t-foreach="docs" t-as="doc">
            <t t-call="web.html_container">
            <t t-call="web.external_layout">
                    <div class="text-center" style="font:500;">
                        <p>الادارة العامة للموارد البشرية
                        <br/>
                        قسم الاجور والمزايا<br/>
                        تقرير الحافز</p>
                    </div>
                    <table style="margin:10px;width:100%;" dir="rtl" class="table-bordered">
                        <thead style="display: table-header-group;">
                            <td class="text-center table-active">اسم الحافز</td>
                            <td class="text-center"><span t-esc="doc.name"/></td>
                            <td class="text-center table-active">طريقة الحساب</td>
                            <t t-if="doc.calculation_method=='fixed'">
                                <td class="text-center">مبلغ ثابت</td>
                            </t>
                            <t t-if="doc.calculation_method=='salary'">
                                <td class="text-center">من المرتب</td>
                            </t>
                            <t t-if="doc.calculation_method=='fixed_degree'">
                                <td class="text-center">مبلغ ثابت حسب الدرجه</td>
                            </t>
                            <t t-if="doc.calculation_method=='fixed_job_title'">
                                <td class="text-center">مبلغ ثابت حسب المسمى الوظيفي</td>
                            </t>
                        </thead>
                        <tr>
                            <td class="text-center table-active">من تاريخ</td>
                            <td class="text-center"><span t-esc="doc.date_from"/></td>
                            <td class="text-center table-active">الي تاريخ</td>
                            <td class="text-center"><span t-esc="doc.date_to"/></td>
                        </tr>
                    </table><br/>
                   <table style="margin:10px;width:100%;" dir="rtl" class="table-bordered">
                      <thead style="display: table-header-group;">
                        <tr class="table-active">
                            <td class="text-center fit">#</td>
                            <td class="text-center fit">الموظف</td>
                            <td class="text-center fit">المسمي الوظيفي</td>
                            <td class="text-center fit">المبلغ</td>
                            <td class="text-center fit">المشروع</td>
                            <td class="text-center fit">السلفيه</td>
                            <td class="text-center fit">الكفالات</td>
                            <td class="text-center fit">الضريبه</td>
                            <td class="text-center fit">الدمغة</td>
                            <td class="text-center fit">خصم الاداء</td>
                            <td class="text-center fit">اجمالي الخصومات</td>
                            <td class="text-center fit">الصافي</td>
                        </tr>
                        </thead>
                        <div class="page">
                            <t t-set="count" t-value="1"/> 
                            <t t-foreach="doc.line_ids" t-as="line">
                                <tr style="page-break-inside: avoid;">
                                    <td class="text-center">
                                        <span t-esc="count"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="line.employee_id.name"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="line.employee_id.job_title_id.name"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="line.amount"/>
                                    </td>
                                    <td class="text-center">
                                        <t t-esc="'{0:,.2f}'.format(float(line.projects))"/>
                                    </td>
                                    <td class="text-center">
                                        <t t-esc="'{0:,.2f}'.format(float(line.loans))"/>
                                    </td>
                                    <td class="text-center">
                                        <t t-esc="'{0:,.2f}'.format(float(line.card))"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="line.tax_id"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="line.stamp"/>
                                    </td>
                                    <td class="text-center">
                                      <t t-esc="'{0:,.2f}'.format(float(line.deduction_amount))"/>
                                    </td>
                                    <td class="text-center">
                                      <t t-esc="'{0:,.2f}'.format(float(line.total_deductions))"/>
                                    </td>
                                    <td class="text-center">
                                      <t t-esc="'{0:,.2f}'.format(float(line.net))"/>
                                    </td>
                                </tr>
                                <t t-set="count" t-value="count+1"/>
                            </t>
                        </div>
                        <tr style="page-break-inside: avoid;">
                            <td/>
                            <th colspan="2" class="text-center table-active">الاجمالي</th>
                            <th class="text-center">
                              <t t-esc="'{0:,.2f}'.format(float(sum([line['amount'] for line in doc.line_ids])))"/>
                            </th>
                            <th class="text-center">
                              <t t-esc="'{0:,.2f}'.format(float(sum([line['projects'] for line in doc.line_ids])))"/>
                            </th>
                            <th class="text-center">
                              <t t-esc="'{0:,.2f}'.format(float(sum([line['loans'] for line in doc.line_ids])))"/>
                            </th>
                            <th class="text-center">
                              <t t-esc="'{0:,.2f}'.format(float(sum([line['card'] for line in doc.line_ids])))"/>
                            </th>
                            <th class="text-center">
                              <t t-esc="'{0:,.2f}'.format(float(sum([line['tax_id'] for line in doc.line_ids])))"/>
                            </th>
                            <th class="text-center">
                              <t t-esc="'{0:,.2f}'.format(float(sum([line['stamp'] for line in doc.line_ids])))"/>
                            </th>
                            <th class="text-center">
                              <t t-esc="'{0:,.2f}'.format(float(sum([line['deduction_amount'] for line in doc.line_ids])))"/>
                            </th>
                            <th class="text-center">
                              <t t-esc="'{0:,.2f}'.format(float(sum([line['total_deductions'] for line in doc.line_ids])))"/>
                            </th>
                            <th class="text-center">
                              <t t-esc="'{0:,.2f}'.format(float(sum([line['net'] for line in doc.line_ids])))"/>
                            </th>
                        </tr>
                    </table><br/>
                    <p style="font:600;" dir="rtl" >
                            <strong>قسم الاجور والمزايا</strong>
                            <span>
                                .........................................................................
                            </span>
                            <br/>
                            <strong> الادارة العامة للموارد البشرية</strong>
                            <span>
                                .........................................................
                            </span>
                            <br/>
                            <strong>المراجعة</strong>
                            <span>
                                .............................................................................................
                            </span>
                    </p>
                   
               </t>
            </t>
        </t>
    </template>
</odoo>