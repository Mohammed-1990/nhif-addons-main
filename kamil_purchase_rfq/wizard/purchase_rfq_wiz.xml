<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="purchase_rfq_wizard_form" model="ir.ui.view">
			<field name='name'>Report Purchase RFQ</field>
			<field name='model'>purchase.rfq.wizard</field>
			<field name='arch' type='xml'>
    			<form>
    			    <sheet>
            	        <group col="4">
                            <field name="date_from"/>
                            <field name="date_to"/>
            	        </group>
                        <footer>
                            <button name='get_report' string='Print' type='object' class="oe_highlight"/>
                            <button string="Cancel" special="cancel"/>
                        </footer>
        			</sheet>
                </form>
    	    </field>
        </record>

        <act_window
		id="action_purchase_rfq_wizard"
		name="Report Purchase RFQ"
		res_model="purchase.rfq.wizard"
		view_mode="form"
		target="new"
	    />

        <menuitem name="Report Purchase RFQ"
                  id="menu_report_purchase_rfq"
                  parent="purchase.purchase_report"
                  action="action_purchase_rfq_wizard"
				  sequence="1"
        />

    </data>
</odoo>