<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>




        <record id="kamil_accounting_collection_group" model="ir.module.category">
            <field name="name">Accounting - Collection</field>
            <field name="sequence">2</field>
            <field name="description">Accounting Collection</field>
        </record>




        <record id="collector_group" model="res.groups">
            <field name="name">Collector</field>
            <field name="implied_ids" eval="[(4, ref('account.group_account_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="category_id" ref="kamil_accounting_collection_group"/>
        </record>

        <record id="supervisor_group" model="res.groups">
            <field name="name">Supervisor</field>
            <field name="implied_ids" eval="[(4, ref('account.group_account_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="category_id" ref="kamil_accounting_collection_group"/>
        </record>

        <record id="internal_auditor_group" model="res.groups">
            <field name="name">Internal Auditor</field>
            <field name="implied_ids" eval="[(4, ref('account.group_account_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="category_id" ref="kamil_accounting_collection_group"/>
        </record>

    </data>
</odoo>
