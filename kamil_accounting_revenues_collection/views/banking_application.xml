<odoo>
  <data>
    <!-- explicit list view definition -->

     <record id="banking_application_tree_view" model="ir.ui.view">
            <field name="name">banking application</field>
            <field name="model">banking.application</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name ="account_number"/>
                </tree>
            </field>
        </record>
    
    <record model="ir.ui.view" id="kamil_banking_application_form_veiw">
      <field name="name">banking application. </field>
      <field name="model">banking.application</field>
      <field name="arch" type="xml">
      <form> 
          <sheet>
            <group >
            <group>
            <field name="name" required="1"/>
            </group>
            <group>
            <field name="account_number" required="1"/>
            <field name ="company_id" readonly="1" />
            </group>
             </group>
          </sheet>
          <div class="oe_chatter">
                  <field name="message_follower_ids" widget="mail_followers" />
                  <field name="activity_ids" widget="mail_activity" />
                  <field name="message_ids" widget="mail_thread" />
               </div>
         </form>
        </field>
    </record>


    <record id="action_banking_application" model="ir.actions.act_window">
            <field name="name">banking application</field>
            <field name="res_model">banking.application</field>
            <field name="view_mode">tree,form</field>
        </record>



    
    
    

    <menuitem name="Banking Application" id="banking_application_menu" 
      parent="account.account_account_menu" 
      sequence="10"
      action="action_banking_application"/> 
  </data>
</odoo>
