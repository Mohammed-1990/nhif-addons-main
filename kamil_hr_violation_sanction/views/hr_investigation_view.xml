<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_hr_investigation_form" model="ir.ui.view">
            <field name="name">hr.investigation.form</field>
            <field name="model">hr.investigation</field>
            <field name="arch" type="xml">
                <form string="Hr Investigation">
                    <header>
                        <button name="action_approve" type="object" string="Confirm" states="draft" class="oe_highlight" />
                        <button name="action_filled" type="object" string="Send" states="employee"  class="oe_highlight"/>
                        <button name="action_maneger_approve" type="object" string="Approve" states="filled" class="oe_highlight" groups="kamil_hr_security.hr_employment_department_group,kamil_hr_security.hr_employment_department_hq_group"/>
                        <button name="action_maneger_reject" type="object" string="Reject" states="filled" groups="kamil_hr_security.hr_employment_department_group,kamil_hr_security.hr_employment_department_hq_group"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,employee,filled,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" class="oe_inline"/>
                            </h1>
                        </div>
                        <group col="4" >
                            <field name="employee_no" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="employee_id" attrs="{'readonly':[('state','!=','draft')]}" options="{'no_create':True,'no_open':True,'no_edit':True}" />
                            </group>

                            <group col="4">

                           <field name="management_id" options="{'no_create':True,'no_open':True,'no_edit':True}"/> 
                           <field name="department_id" readonly="1" options="{'no_create':True,'no_open':True,'no_edit':True}"/> 
                           <field name="functional_degree" options="{'no_create':True,'no_open':True,'no_edit':True}"/>
                           <field name="date"/>
                           <field name="violation_type" options="{'no_create':True,'no_open':True,'no_edit':True}" attrs="{'readonly':[('state','!=','draft')]}"/>
                            
                        </group>
                        <group>
                            <field name= "summary_investigation" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>

                       
                        <group string="Employee comments"/>
                        <field name="employee_comments" attrs="{'readonly':[('state','!=','employee')]}"/>
                        <group string="Manager comments"/>
                        <field name="manager_comments" attrs="{'readonly':[('state','!=','filled')],}"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="tree_hr_investigation_view" model="ir.ui.view">
            <field name="name">hr.investigation.tree</field>
            <field name="model">hr.investigation</field>
            <field name="arch" type="xml">
                <tree string="Recruit Requests">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="functional_degree"/>
                    <field name="date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>



        <record id="action_hr_investigation" model="ir.actions.act_window">
            <field name="name"> Employee Investigation</field>
            <field name="res_model">hr.investigation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <record id="view_investigation_type_form" model="ir.ui.view">
            <field name="name">investigation.type.form</field>
            <field name="model">investigation.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Investigation Type"/>
                            </h1>
                        </div>
                        <group col="2">
                            <field name="description"/>
                            <field name="expect_decision"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tree_investigation_type_view" model="ir.ui.view">
            <field name="name">investigation.type.tree</field>
            <field name="model">investigation.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="expect_decision"/>
                </tree>
            </field>
        </record>

        <record id="action_hr_investigation_type" model="ir.actions.act_window">
            <field name="name">Investigation Types</field>
            <field name="res_model">investigation.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>



        <menuitem id="menu_hr_violation_sanction" name="violation and sanction" parent="kamil_hr_personal.personal_menu" sequence="0"/>

        <menuitem id="menu_investigation" name="Investigations" parent="menu_hr_violation_sanction" action="action_hr_investigation"
            sequence="2"/>

        
        
         <menuitem id="menu_violation_configuration" name="Configurations" parent="menu_hr_violation_sanction" groups="kamil_hr_security.hr_employment_department_group,kamil_hr_security.hr_employment_department_hq_group"/>

        <menuitem id="menu_investigation_type" name="Investigation Types" parent="menu_violation_configuration"  action="action_hr_investigation_type" groups="kamil_hr_security.hr_employment_department_group,kamil_hr_security.hr_employment_department_hq_group" />





            




    </data>
</odoo>
