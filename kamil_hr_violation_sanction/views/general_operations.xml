                    <!-- Actions -->

     <record id="action_employee_profile" model="ir.actions.act_window">
      <field name="name">Employee Own Profile</field>
      <field name="res_model">hr.employee</field>
      <field name="view_mode">kanban,tree,form</field>
      <field name="context">{'create':False,'edit':False,'delete':False}</field>
      <field name="domain">[('user_id','=',uid),]</field>
    </record>

    <record id="action_employee_leave_request" model="ir.actions.act_window">
      <field name="name">Leave Request</field>
      <field name="res_model">hr.leave</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('employee_id.user_id','=',uid),]</field>
      <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
              Click create button to create leave request
            </p>
           </field>
    </record>

    <record id="action_employee_payslip" model="ir.actions.act_window">
      <field name="name">Employee payslip</field>
      <field name="res_model">hr.payslip</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{'create':False,'edit':False,'delete':False}</field>
      <field name="domain">[('employee_id.user_id','=',uid),('state','=','done')]</field>
      <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
              Not Found Payslip
            </p>
           </field>
    </record>

    <record id="action_hr_contravention" model="ir.actions.act_window">
