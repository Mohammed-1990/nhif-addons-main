<odoo>
    <data>

    <!--  promotions timeline tree view -->    
    <record model="ir.ui.view" id="promotion_criteria_ratios_tree_view">
      <field name="name">promotion.criteria.ratios.tree</field>
      <field name="model">promotion.criteria.ratios</field>
      <field name="arch" type="xml">
          <tree>
            <field name="name"/>
            <field name="degree_ratio"/>
            <field name="appoiontment_ratio"/>
          </tree>
      </field>
    </record>


    <!--  promotions timeline form view -->    
    <record model="ir.ui.view" id="promotion_criteria_ratios_form_view">
      <field name="name">promotion.criteria.ratios.form</field>
      <field name="model">promotion.criteria.ratios</field>
      <field name="arch" type="xml">
          <form>

            <sheet>
              <h1>
                <field name="name" placeholder="Description"/>
              </h1><br/><br/>
              <group col="4">
                <field name="degree_ratio"/>
                <field name="appoiontment_ratio"/>
              </group>

              <notebook>
                <page string="Qualifcations">
                  <field name="line_ids">
                    <tree editable="bottom">
                      <field name="qualifcation"  options="{'no_create':1}"/>
                      <field name="ratio"/>
                    
                    </tree>
                  </field>
                </page>
              </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="activity_ids" widget="mail_activity"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
          </form>
        </field>
      </record>


   <!-- action promotions timeline -->
   <record  id="action_promotion_criteria_ratios" model="ir.actions.act_window">
      <field name="name">Promotion Criteria Ratios</field>
      <field name="res_model">promotion.criteria.ratios</field>
      <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem name="Promotion Criteria Ratios" id="promotion_criteria_ratios_menu" parent="hr_promotions_main_menu" action="action_promotion_criteria_ratios" sequence="3" groups="kamil_hr_security.hr_employment_department_group"/>



  </data>
</odoo>