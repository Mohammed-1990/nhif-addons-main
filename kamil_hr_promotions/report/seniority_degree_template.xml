<odoo>
    <record model="report.paperformat" id="paperformat_report">
        <field name="name">paperformat.functions.report</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_width">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field> 
        <field name="margin_top">30</field>
        <field name="margin_right">5</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>

    <report id="seniority_degree_report"
            model="seniority.degree.wizard"
            string="Seniority Degree Report"
            report_type="qweb-html"
            name="kamil_hr_promotions.seniority_degree_template"
            paperformat="paperformat_report"
            menu="False"/>
               

    <template id="seniority_degree_template">
        <t t-call="web.html_container">
        <t t-call="web.external_layout">
            <div class="page" dir="rtl">
                 <div ><br/><br/>
                    <div class="text-center" style="font:500;">
                        <p>تقرير أقدمية الدرجة <br/><t t-esc="degree_id"/><br/>
                        </p><br/><br/>
                    </div>
                    <div class="text-right" style="font:500;">
                        <p>تاريخ تشكيل اللجنة : <t t-esc="date"/><br/>
                        </p>
                    </div>
                </div><br/>
                   <table style="margin:10px;width:100%;" dir="rtl" class="table-bordered">
                    <thead class="table-active" style="display: table-header-group;">
                        <th class="text-center">#</th>
                        <th class="text-center">اسم الموظف</th>
                        <th class="text-center">الدرجة</th>
                        <th class="text-center">تاريخ اخر ترقية</th>
                        <th class="text-center">الفرق بالأيام</th>
                        <th class="text-center">النسبة</th>
                    </thead>
                        <tbody>
                            <t t-set="count" t-value="1"/>
                            <t t-foreach="docs" t-as="doc">
                                <tr>
                                    <td class="text-center">
                                        <span t-esc="count"/>
                                    </td>

                                    <td class="text-center">
                                        <span t-esc="doc['employee']"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="doc['degree_id']"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="doc['last_promotion_date']"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="doc['difference_days']"/>
                                    </td>
                                    <td class="text-center">
                                        <t t-esc="'{0:,.2f}'.format(float(doc['ratio']))"/>
                                    </td>
                                </tr>
                                <t t-set="count" t-value="count+1"/>
                            </t>
                        </tbody>
                        <t t-if="docs==[]">
                            <tr class="text-center">
                                <td colspan="6">لا توجد بيانات</td>
                            </tr>
                        </t>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>