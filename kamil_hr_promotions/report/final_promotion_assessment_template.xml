<odoo>
    <record model="report.paperformat" id="paperformat_report">
        <field name="name">paperformat.functions.report</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_width">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field> 
        <field name="margin_top">30</field>
        <field name="margin_right">5</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>

    <report id="final_promotion_assessment_report"
            model="final.promotion.assessment.wizard"
            string="Final Promotion Assessment Report"
            report_type="qweb-html"
            name="kamil_hr_promotions.final_promotion_assessment_template"
            paperformat="paperformat_report"
            menu="False"/>
               

    <template id="final_promotion_assessment_template">
        <t t-call="web.html_container">
        <t t-call="web.external_layout">
            <div class="page">
                 <div ><br/><br/>
                    <div class="text-center" style="font:500;">
                        <p>تقرير نهائي تقييم للترقي<br/>
                        </p>
                    </div>
                </div><br/><br/>
                <table style="margin:10px;width:100%;" dir="rtl" class="table-bordered">
                    <thead class="table-active" style="display: table-header-group;">
                        <th class="text-center">#</th>
                        <th class="text-center">اسم الموظف</th>
                        <th class="text-center">أقدمية التعيين</th>
                        <th class="text-center">أقدمية الدرجة</th>
                        <th class="text-center">الأداء آخر عامين</th>
                        <th class="text-center">المؤهل</th>
                        <th class="text-center">مجموع الدرجات</th>
                        <th class="text-center">الترتيب</th>
                        <th class="text-center">الوظيفة</th>
                        <th class="text-center">رقم الوظيفة</th>
                    </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="doc">
                                <tr>
                                    <td class="text-center">
                                        <span t-esc="doc['number']"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="doc['employee_id']"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="doc['seniority_appoiontment']"/>
                                    </td>
                                     <td class="text-center">
                                        <span t-esc="doc['seniority_degree']"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="doc['last_2years_performance']"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="doc['appoiontment']"/>
                                    </td>

                                    <td class="text-center">
                                        <span t-esc="doc['total_grades']"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="doc['order']"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="doc['functional_id']"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="doc['job_number']"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                        <t t-if="docs==[]">
                            <tr class="text-center">
                                <td colspan="10">لا توجد بيانات</td>
                            </tr>
                        </t>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>