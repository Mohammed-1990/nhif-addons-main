<odoo>
  <data>
    <record model="ir.ui.view" id="work_injuries_form_view">
      <field name="name">work.injuries.form</field>
      <field name="model">work.injuries</field>
      <field name="arch" type="xml">
      <form>
        
        <sheet>
          <div>
            <group col="4">
              <h1>
                <field name="name" placeholder="Injurie No"/>
              </h1>
            </group>
            <group col= "4" >
            <field name="employee_no" />  
            <field name="employee_id" options="{'no_create':True,'no_edit':True}"/>
            <field name="unit_id" options="{'no_create':True}"/>
            <field name= "department_id" options="{'no_create':True,'no_edit':True}"/>
            <field name="job_id" options="{'no_create':True,'no_edit':True}"/>
            <field name="date"/>            
          </group>
          <group>
            <field name= "cause_injury"/>
            <field name= "type_injury"/>
            <field name= "medical_report"/>
          </group>
          <group>
          	<field name="note"/>
          </group>
          </div>
        </sheet>
        <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="activity_ids" widget="mail_activity"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
      </form>
    </field>
  </record>

    <record model="ir.ui.view" id="work_injuries_tree_view">
      <field name="name">work.injuries.tree</field>
      <field name="model">work.injuries</field>
      <field name="arch" type="xml">
       <tree>
        <field name= "name"/>
        <field name="employee_no" />  
        <field name="employee_id" />
        <field name="job_id"/>
        <field name="date"/>  
        <field name= "cause_injury"/>
        <field name= "type_injury"/>         
      </tree>
     </field>
    </record>

  <record id="action_work_injuries" model="ir.actions.act_window">
    <field name="name">Work Injuries</field>
    <field name="res_model">work.injuries</field>
    <field name="view_mode">tree,form</field>
  </record>

<menuitem name="HR Personal" id="personal_menu"/>
  <menuitem 
    name="Work Injuries" 
    id="work_injuries_menu"
    parent="personal_menu"
    action="action_work_injuries"
    sequence="4"/>

  </data>
</odoo>