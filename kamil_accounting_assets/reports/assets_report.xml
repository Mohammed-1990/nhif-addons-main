<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	
	<!-- Payment Report-->
	<report 
		id="assets_summary_report"
		model="asset.report"
		string="Assets Report"
		report_type="qweb-html"
		name="kamil_accounting_assets.assets_template"
	/>


	<!-- Assets Report Template-->
	<template id="assets_template">
		<t t-call="web.external_layout">
			<t t-call="web.html_container">
				<div class="page">


					<div dir="rtl" style="float:right;text-align:start;">
						<a href="#" target="_blank">
							<svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-printer" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
								<path d="M11 2H5a1 1 0 0 0-1 1v2H3V3a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v2h-1V3a1 1 0 0 0-1-1zm3 4H2a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h1v1H2a2 2 0 0 1-2-2V7a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2h-1v-1h1a1 1 0 0 0 1-1V7a1 1 0 0 0-1-1z"/>
								<path fill-rule="evenodd" d="M11 9H5a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1zM5 8a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H5z"/>
								<path d="M3 7.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z"/>
							</svg>
						</a>
					</div>

					<div>
						<h3 style="font-family:Calibri;" class="text-center">
							<t>
								<b>ملخص الاصول</b><br/> حتى <t t-esc="date"/> <br/>
							</t>
						</h3>

						<br/><br/>

						<table  dir="rtl" border="1" class="text-right  table-bordered" style="float:right;text-align:start;">
							<thead>
								<tr style="page-break-inside: avoid;" class="table-active">
									<td class="text-center fit">م.</td>
									<td class="text-center fit">البيان</td>
									<td class="text-center fit">رصيد 1/1</td>
									<td class="text-center fit">اضافة العام</td>
									<td class="text-center fit">استبعاد العام</td>
									<td class="text-center fit">رصيد 31/12</td>
									<td class="text-center fit">معدل اﻹهلاك</td>
									<td class="text-center fit">إهلاك 1/1</td>
									<td class="text-center fit">إهلاك العام</td>
									<td class="text-center fit">مجمع اﻹهلاك</td>
									<td class="text-center fit">صافي اﻷصل</td>
								</tr>
							</thead>
							<tbody>
								<t t-foreach="docs" t-as="doc">
									<tr style="page-break-inside: avoid;">
										<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<t t-esc="doc_index + 1"/>
										</td>
										<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<t t-esc="doc['name']"/>
										</td>
										<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<t t-esc="'{0:,.2f}'.format(float(doc['balance_in_1_1']))"/>
										</td>
										<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<t t-esc="'{0:,.2f}'.format(float(doc['year_addition']))"/>
										</td>
										<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<t t-esc="'{0:,.2f}'.format(float(doc['year_exclude']))"/>
										</td>
										<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<t t-esc="'{0:,.2f}'.format(float(doc['balance_in_31_12']))"/>
										</td>
										<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<t t-esc="doc['dep_percentage']"/>%
										</td>
										<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<t t-esc="'{0:,.2f}'.format(float(doc['dep_in_1_1']))"/>
										</td>
										<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<t t-esc="'{0:,.2f}'.format(float(doc['year_dep']))"/>
										</td>
										<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<t t-esc="'{0:,.2f}'.format(float(doc['accumulative_dep']))"/>
										</td>
										<td style="font:300; white-space: nowrap;width: 1%; padding:5px;">
											<t t-esc="'{0:,.2f}'.format(float(doc['net_asset']))"/>
										</td>
									</tr>
								</t>
								<tr>
									<td class="text-center" colspan="2">
										<b>
											الاجمالي
										</b>
									</td>

									<td class="text-center">
										<b>
											<t t-esc="'{0:,.2f}'.format(float(  sum(doc['balance_in_1_1'] for doc in docs ) ))"/>
										</b>
									</td>
									<td class="text-center">
										<b>
											<t t-esc="'{0:,.2f}'.format(float(  sum(doc['year_addition'] for doc in docs ) ))"/>
										</b>
									</td>
									<td class="text-center">
										<b>
											<t t-esc="'{0:,.2f}'.format(float(  sum(doc['year_exclude'] for doc in docs ) ))"/>
										</b>
									</td>
									<td class="text-center">
										<b>
											<t t-esc="'{0:,.2f}'.format(float(  sum(doc['balance_in_31_12'] for doc in docs ) ))"/>
										</b>
									</td>
									<td class="text-center">
										<b>
											<!-- <t t-esc="'{0:,.2f}'.format(float(  sum(doc['dep_percentage'] for doc in docs ) ))"/> -->
										</b>
									</td>
									<td class="text-center">
										<b>
											<t t-esc="'{0:,.2f}'.format(float(  sum(doc['dep_in_1_1'] for doc in docs ) ))"/>
										</b>
									</td>
									<td class="text-center">
										<b>
											<t t-esc="'{0:,.2f}'.format(float(  sum(doc['year_dep'] for doc in docs ) ))"/>
										</b>
									</td>
									<td class="text-center">
										<b>
											<t t-esc="'{0:,.2f}'.format(float(  sum(doc['accumulative_dep'] for doc in docs ) ))"/>
										</b>
									</td>
									<td class="text-center">
										<b>
											<t t-esc="'{0:,.2f}'.format(float(  sum(doc['net_asset'] for doc in docs ) ))"/>
										</b>
									</td>








								</tr>
								
							</tbody>
						</table>
						
						<br/><br/><br/>

						<p>.
						</p>

					</div>
				</div>
			</t>
		</t>
	</template>

</odoo>