<?xml version="1.0" encoding="utf-8"?>
<odoo>
	

	<record id="view_asset_report_form" model="ir.ui.view">
		<field name="name">asset.report.form</field>
		<field name="model">asset.report</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<field name="date" required="1"/>
					</group>
					<footer>
						<button name="get_report" type="object" string="Print" class="btn-primary"/>
						<button string="Cancel" class="btn-secondary" special="cancel"/>
					</footer>
				</sheet>
			</form>
		</field>
	</record>

	
	<act_window
		id="action_asset_report"
		name="Assets Report"
		res_model="asset.report" 
		src_model="account.asset.asset"
		view_mode="form"
		target="new"
	/>


	<menuitem id="report_assets_menu" parent="account.menu_finance_entries_management" action="action_asset_report" name="Assets Report" sequence="105"/>

</odoo>