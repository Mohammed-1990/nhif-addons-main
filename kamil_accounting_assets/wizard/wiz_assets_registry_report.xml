<?xml version="1.0" encoding="utf-8"?>
<odoo>
	

	<record id="view_asset_registry_report_form" model="ir.ui.view">
		<field name="name">asset.registry.report.form</field>
		<field name="model">asset.registry.report</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group col="4">
						<field name="date" required="1"/>
						<field name="asset_category_ids" widget="many2many_tags" options="{'no_create':True}"/>
					</group>
					<footer>
						<button name="get_report" type="object" string="Print" class="btn-primary"/>
						<button string="Cancel" class="btn-secondary" special="cancel"/>
					</footer>
				</sheet>
			</form>
		</field>
	</record>

	
	<act_window
		id="action_asset_registry_report"
		name="Assets Registry Report"
		res_model="asset.registry.report" 
		src_model="account.asset.asset"
		view_mode="form"
		target="new"
	/>


	<menuitem id="report_assets_registry_menu" parent="account.menu_finance_entries_management" action="action_asset_registry_report" name="Assets Registry Report" sequence="109"/>

</odoo>