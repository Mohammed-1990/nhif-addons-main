<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Wizard Asset Report -->
	<record id="view_wiz_asset_report_form" model="ir.ui.view">
		<field name="name">wiz.account.asset.report.form</field>
		<field name="model">wiz.account.asset.report</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group col="4">
						<field name="date_from"/>
						<field name="date_to"/>
						<field name="category_id" options="{'no_create':'1'}"/>
					</group>
					<footer>
						<button name="print_report" type="object" string="Print" class="btn-primary"/>
						<button string="Cancel" class="btn-secondary" special="cancel"/>
					</footer>
				</sheet>
			</form>
		</field>
	</record>


	<!--Action Asset Report -->
	<act_window
		id="action_wiz_asset_report"
		name="Asset Report"
		res_model="wiz.account.asset.report"
		view_mode="form"
		target="new"
	/>


</odoo>