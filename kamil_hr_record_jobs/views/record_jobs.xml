<odoo>
    <data>


      <record model="ir.ui.view" id="record_job_tree_view">
        <field name="name">record.jobs.tree</field>
        <field name="model">record.jobs</field>
        <field name="arch" type="xml">
          <tree>
            <field name="name"/>
            <field name="state"/>
          </tree>
        </field>
      </record>

    <!-- record job form view -->    
    <record model="ir.ui.view" id="record_job_form_view">
      <field name="name">record.jobs.form</field>
      <field name="model">record.jobs</field>
      <field name="arch" type="xml">
          <form>
            <header>
              <button name="do_confirm" string="Confirm" type="object" class="btn btn-primary" states="draft"/>
              <button name="do_archived" string="Archived" type="object" states="confirmed"/>
              <field name="state" widget="statusbar"/>
            </header>
            <sheet>
              <div name='button_box' class="oe_button_box">
                <button name="functions"
                        type="object"  
                        class="oe_stat_button" 
                        icon="fa-minus-square"
                        >
                    <field string="Functions" name="functions_count" widget="statinfo"/>
                </button>
              </div>
              <h1>
                 <field name="name" placeholder="Record Job" attrs="{'readonly':[('state','!=','draft')]}"/>
              </h1>
              <group>
                <group>

                <field name="record_type"/>
              </group>
              </group>

              <notebook>
                <page string="Details">
                  <field name="line_ids" attrs="{'readonly':[('state','!=','draft')]}">
                    <tree  editable="bottom">
                      <field name="job_number"/>
                      <field name="number"/>
                      <field name="job" options="{'no_create':True}"/>
                      <field name="section"/>
                      <field name="employee_id"  options="{'no_create':True}"/>
                      <field name="employee_degree" options="{'no_create':True}"/>
                      <field name="date"/>
                      <field name="current_salary"/>
                      <field name="notes"/>
                    </tree>
                  </field>
                </page>
              </notebook>
            </sheet>
          </form>
        </field>
      </record>

      <record model="ir.ui.view" id="record_job_line_tree_view">
        <field name="name">record.jobs.line.tree</field>
        <field name="model">record.jobs.line</field>
        <field name="arch" type="xml">
          <tree create="0">
            <field name="job_number"/>
            <field name="number"/>
            <field name="job"/>
            <field name="section"/>
            <field name="employee_id"/>
            <field name="employee_degree"/>
            <field name="date"/>
            <field name="current_salary"/>
            <field name="notes"/>
          </tree>
        </field>
      </record>


   <!-- Action Record Job-->
   <record  id="action_record_job" model="ir.actions.act_window">
      <field name="name">Record Jobs</field>
      <field name="res_model">record.jobs</field>
      <field name="view_mode">tree,form</field>
    </record>



    <menuitem name="Record Jobs" 
      id="record_job_main_menu" 
      parent="hr.menu_hr_root"
      sequence="3"
      groups="kamil_hr_security.hr_employment_department_group"/>
    
    <menuitem name="Record Jobs" 
      id="record_job_menu" 
      parent="record_job_main_menu" 
      action="action_record_job"
      sequence ="1"/>



  </data>
</odoo>