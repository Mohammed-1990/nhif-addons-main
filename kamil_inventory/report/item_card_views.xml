					<table dir="rtl" border="1" class="text-right table table-condensed table-hover">

                    	<thead>
                        	<tr class="text-center">
                        		<th rowspan="2">التاريخ</th>
                        		<th rowspan="2">المنتج</th>
                        		<th rowspan="2">المخزن</th>
                        		<th colspan="2">الوارد</th>
                        		<th colspan="2">المنصرف</th>
                        		<th rowspan="2">الباقي بالعهدة</th>
                        		<th rowspan="2">وارد او منصرف الي</th>
