                    			<td>المقدار</td>
                    			<td>رقم الاذن</td>
                        	</tr>
                        </thead>
                        <tbody>
                        	<t t-foreach="docs" t-as="doc">
	                        	<tr>
	                        		<td>
	                                    <t t-esc="doc['date']"/>
	                                </td>
									<td>
	                                    <t t-esc="doc['product']"/>
	                                </td>
									<td>
	                                    <t t-esc="doc['location']"/>
	                                </td>
	                                <td>
	                                    <t t-esc="doc['amount_1']"/>
	                                </td>
	                                <td>
	                                    <t t-esc="doc['permission_no_1']"/>
	                                </td>
	                                <td>
	                                    <t t-esc="doc['amount_2']"/>
	                                </td>
	                                <td>
	                                    <t t-esc="doc['permission_no_2']"/>
	                                </td>
	                                <td>
	                                    <t  t-esc="doc['remaining']"/>
	                                </td>
	                                <td>
	                                    <t  t-esc="doc['partner']"/>
	                                </td>       
	                        	</tr>
	                        </t>
                        </tbody>
                    </table>
                </div>
			</t>
		</t>
