		name="kamil_inventory.item_card_template"
	/>


	<!-- Item Card Template-->
	<template id="item_card_template">
		<t t-call="web.external_layout">
			<t t-call="web.html_container">
                <div class="page">
					<div>
						<h3 style="font-family:Calibri;" class="text-center">
							<b>كرت العهدة</b>
							<br/>
						</h3>	
						<br/>
