<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record model="ir.ui.view" id="view_item_card_test_graph">
            <field name="name">item.card.graph</field>
            <field name="model">item.card.test</field>
            <field name="arch" type="xml">
                <graph string="Item Card">
                    <field name="product_id" type="row"/>
                </graph>
            </field>
        </record>

        <record model="ir.ui.view" id="view_item_card_test_pivot">
            <field name="name">item.card.report.pivot</field>
            <field name="model">item.card.test</field>
            <field name="arch" type="xml">
                <pivot string="Item Card" disable_linking="True">
                    <field name="product_id" type="row"/>
                    <field name="move_id" type="row"/>
                    <field name="product_qty" type="col"/>
                    <field name="qty_done" type="col"/>
                    <field name="date" type="row"/>
                </pivot>
            </field>
        </record>

        <record model="ir.ui.view" id="view_item_card_test_tree">
            <field name="name">item.card.report.tree</field>
            <field name="model">item.card.test</field>
            <field name="arch" type="xml">
                <tree string="Item Card" >
                    <field name="product_id" />
                    <field name="move_id" />
                    <field name="qty_done" />
                    <field name="product_qty"/>
                    <field name="product_uom_qty"/>
                    <field name="available_quantity"/>
                    <field name="picking_type_id"/>
                    <field name="location_id"/>
                    <field name="date" />
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_item_card_test_form">
            <field name="name">item.card.report.form</field>
            <field name="model">item.card.test</field>
            <field name="arch" type="xml">
                <form string="Item Card" >
                    <sheet>
                        <group col="4">
                            <field name="product_id" />
                            <field name="move_id" />
                            <field name="qty_done" />
                            <field name="product_qty"/>
                            <field name="available_quantity"/>
                            <field name="picking_type_id"/>
                            <field name="location_id"/>
                            <field name="date" />
                            <field name="state"/>
                            <field name="product_uom_qty"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

