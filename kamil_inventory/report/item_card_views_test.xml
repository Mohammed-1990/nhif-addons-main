    <record id="action_item_card_test" model="ir.actions.act_window">
        <field name="name">Item Card Report</field>
        <field name="res_model">item.card.test</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <!-- <field name="search_view_id" ref="view_scrap_search"/> -->
        <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'pivot', 'view_id': ref('view_item_card_test_pivot')}),
                          (0, 0, {'view_mode': 'graph', 'view_id': ref('view_item_card_test_graph')}),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('view_item_card_test_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('view_item_card_test_form')})]"/>
